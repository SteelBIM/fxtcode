<configuration>
  <appSettings file="Dict/Dictionary.config">
    <!--根目录-->
    <add key="rooturl" value="/" />
    
    <!--productfeedback-->
    <add key="recivemail" value="huy@fxtcn.com"/>
    <add key="sendmail" value="tanl@fxtcn.com"/>
    <add key="mailaccount" value="tanl@fxtcn.com"/>
    <add key="mailpassword" value="tan123"/>
    <add key="smtpserver" value="smtp.exmail.qq.com"/>
    <add key="smtpport" value="25"/>
  </appSettings>
  <connectionStrings>
    <add name="FXTConnectionString" connectionString="Data Source =192.168.0.5;DataBase = fxtusercenter;User Id = fxtuser;Password =fxt.user" />
  </connectionStrings>
  <system.web>
    <compilation debug="true" targetFramework="4.0" />
    <authentication mode="Forms" />
    <httpRuntime maxRequestLength="2097151"/>
  </system.web>
  <system.serviceModel>
    <!--aspNetCompatibilityEnabled="true"-->
    <serviceHostingEnvironment aspNetCompatibilityEnabled="true" multipleSiteBindingsEnabled="true" />
    <behaviors>
      <endpointBehaviors>
        <behavior name="RestFxtUserCenterServiceBehavior">
          <webHttp />
        </behavior>
      </endpointBehaviors>
      <serviceBehaviors>
        <behavior name="exceptionBehavior">
          <serviceMetadata httpGetEnabled="true" />
          <serviceDebug includeExceptionDetailInFaults="true" />
        </behavior>
      </serviceBehaviors>
    </behaviors>
    <!--webHttpBinding Rest standardEndpoints-->
    <standardEndpoints>
      <webHttpEndpoint>
        <standardEndpoint maxReceivedMessageSize="2147483647" crossDomainScriptAccessEnabled="true">
          <readerQuotas maxArrayLength="2147483647" />
        </standardEndpoint>
      </webHttpEndpoint>
    </standardEndpoints>
    <bindings>
      <webHttpBinding>
        <binding maxReceivedMessageSize="2147483647" maxBufferSize="2147483647">
          <readerQuotas maxArrayLength="2147483647" maxStringContentLength="2147483647" maxDepth="64"/>
        </binding>
      </webHttpBinding>
    </bindings>

    <services>
      <service behaviorConfiguration="exceptionBehavior" name="FxtUserCenterService.Actualize.UserCenter">
        <endpoint behaviorConfiguration="RestFxtUserCenterServiceBehavior" binding="webHttpBinding" contract="FxtUserCenterService.Contract.IUserCenter" />
      </service>
    </services>
  </system.serviceModel>
  <system.webServer>
    <modules runAllManagedModulesForAllRequests="true" />
        <directoryBrowse enabled="true" />
  </system.webServer>
</configuration>
