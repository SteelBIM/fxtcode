@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_LayoutHome.cshtml";
}

<h2>Index2</h2>
@section cssLink{
    <link href="~/Content/bootstrap-table-develop/src/bootstrap-table.css" rel="stylesheet" />

}
@section mainContent{
    <div class="col-lg-12">
        <h1 class="page-header">系统设置-激活码类型设置</h1>
    </div>

    <div class="row" style="width: 100%; float: left; margin-left: 0;">

    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body" style="padding-bottom:0px;">
                <div class="col-sm-12" style="margin-top:10px;">
                    <div class="input-group col-lg-12">
                        <span style="float:left; line-height:35px;"> 出版社：</span>
                        <div class="col-sm-2">
                            <select id="publish" class="selectpicker show-tick form-control" data-live-search="true">
                                <option value="全部" selected="selected">全部</option>
                                @foreach (var obj in ViewBag.PublishList)
                                {
                                    <option value="@obj.publishid">@obj.publishname</option>
                                }
                            </select>
                        </div>
                        <span style="float:left; line-height:35px;"> 应用类型：</span>
                        <div class="col-sm-2">
                            <select id="type" class="selectpicker show-tick form-control" data-live-search="true">
                                <option value="0" selected="selected">全部</option>
                                @foreach (var obj in ViewBag.devicetypelist)
                                {
                                    <option value="@obj.devicetypeid">@obj.devicetype</option>
                                }
                            </select>
                        </div>
                        <span style="float:left; line-height:35px;"> 购买方式：</span>
                        <div class="col-sm-2">
                            <select id="buyway" class="selectpicker show-tick form-control" data-live-search="true">
                                <option value="0" selected="selected">全部</option>
                                <option value="1">线上</option>
                                <option value="2">线下</option>
                            </select>
                        </div>
                        <div class="col-sm-2" style="margin-left:-15px;">
                            <div class="input-group col-lg-3">
                                <button id="searchbtn" type="button" class="btn btn-default" style="float:left; margin-left:20px;width:100px; height:34px; background-color:#515562; color:#fff;">
                                    <span class="glyphicon" aria-hidden="true"></span>查询
                                </button>
                            </div>
                        </div>
                        <div class="col-sm-2" style="margin-left:-15px;">
                            <div class="input-group col-lg-3">
                            
                                <button onclick="add()" style="background-color:#E16965; color:#fff;border-color:#e16965; margin-right:15px; border-radius:5px;"  id="btn_add" type="button" class="btn btn-default"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span>新建 </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div style="clear:both;"></div>
                <div id="toolbar" class="btn-group">
                </div>
                <table id="tb_activatetype"></table>
                <form id="activateForm" method="post" class="form-horizontal" style=" width:100%;" action="#">
                    <div class="modal fade" id="setbpolicypr" style=" overflow:auto;" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div style="clear:both; height:50px;"></div>

                                <div class="row">
                                    <div class="form-group">
                                        <label class="col-lg-3 control-label"><em>*</em>激活码类型:</label>
                                        <div class="col-lg-5">
                                            <input type="text" data-options="" class="form-control"id="codeType"/>
                                        </div>
                                    </div>
                                    <div style="clear:both;"></div>
                                    <div class="form-group">
                                        <label class="col-lg-3 control-label"><em>*</em>出版社:</label>
                                        <div class="col-lg-5">
                                            <select id="publishname" class="selectpicker show-tick form-control" data-live-search="true">
                                                @foreach (var obj in ViewBag.PublishList)
                                                {
                                                    <option value="@obj.publishid">@obj.publishname</option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-3 control-label"><em>*</em>应用类型:</label>
                                        <div class="col-lg-5">
                                            <select id="addtype" class="selectpicker show-tick form-control" data-live-search="true">
                                                @foreach (var obj in ViewBag.devicetypelist)
                                                {
                                                    <option value="@obj.devicetypeid">@obj.devicetype</option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                    <div style="clear:both;"></div>
                                    <div class="form-group">
                                        <label class="col-lg-3 control-label"><em>*</em>购买方式:</label>
                                        <div class="col-lg-5">
                                            <select id="way" class="selectpicker show-tick form-control" data-live-search="true">
                                                <option value="0" selected="selected">全部</option>
                                                <option value="1">线上</option>
                                                <option value="2">线下</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div style="clear:both;"></div>
                                    <div class="form-group">
                                        <label class="col-lg-3 control-label"><em>*</em>可激活设备:</label>
                                        <div class="col-lg-5">
                                            <input type="text" data-options="" class="form-control" id="device" />
                                        </div>
                                    </div>
                                    <div style="clear:both;"></div>
                                    <div class="form-group">
                                        <label class="col-lg-3 control-label"> 备注:</label>
                                        <div class="col-lg-5" style=" width:274px;">
                                            <textarea class="form-control" style="height:80px;" id="Remark" name="Remark"></textarea>
                                        </div>
                                    </div>
                                </div>

                                <div style="clear:both; height:50px;"></div>
                                <div class="modal-footer">
                                    <input type="hidden" id="policyid" value="0" />
                                    <button type="button" class="btn btn-primary" id="btn_setdata">确定</button>
                                    <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

}

@section jsSrc{
    <script src="~/Content/bootstrap-table-develop/src/bootstrap-table.js"></script>
    <script src="~/Content/bootstrap-table-develop/src/locale/bootstrap-table-zh-CN.js"></script>
    <script src="~/Scripts/bootbox.js"></script>
    <script src="~/Scripts/pages/ActivateTypeMgr.js"></script>
    <script src="~/Scripts/bootstrap-treeview.js"></script>
    <script src="~/Content/bootstrapvalidator-master/dist/js/bootstrapValidator.js"></script>
    <script>
        var pageInit;
        $(function () {
            pageInit = new ActivateTypeMgr();
            pageInit.Init();
        })
    </script>
}
