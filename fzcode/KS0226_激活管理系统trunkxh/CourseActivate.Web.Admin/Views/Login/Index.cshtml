<script type="text/javascript">
    $(document).ready(function () {
        $("body").bind("keydown", function (event) {
            if (event.keyCode == 13) {
                $("#btnLogin").click();
            }
        });
    });
    $(function () {
        $("#LoginName").focus();
        $("#btnLogin").click(function () {
            var LoginName = $("#LoginName").val();
            var LoginPwd = $("#LoginPwd").val();
            if (LoginName == "") {
                alert("请输入用户名~");
                return;
            } if (LoginPwd == "") {
                alert("请输入密码~");
                return;
            }
            addcloud();
            $.post("/Login/Login", { LoginName: LoginName, LoginPwd: LoginPwd }, function (data) {
                if (data == 1) {
                    window.location.href = "/Home/Index";
                } else {
                    alert("用户名或密码错误！");
                }
                removecloud();
            }).complete(function () { removecloud(); });
        });

        //$("#btnLogin").click();
    });
</script>
