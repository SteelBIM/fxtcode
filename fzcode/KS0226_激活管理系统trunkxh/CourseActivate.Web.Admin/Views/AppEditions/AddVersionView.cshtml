@model CourseActivate.Resource.Constract.Model.tb_res_appversion
@{
    bool isNewModel = !(Model.APPVersionID.HasValue && Model.APPVersionID.Value > 0);
    Model.IsForce = isNewModel ? 0 : Model.IsForce;
}
<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-body" style="padding-bottom:0px;">
            @using (Ajax.BeginForm("AddOrUpdateApp", null, new AjaxOptions { HttpMethod = "POST", }, new { @class = "form-horizontal", id = "form" }))
            {
                @*<form id="userForm" method="post" class="form-horizontal" style=" width:100%;" action="@Url.Action("CreateActivationCode")">*@
                @Html.HiddenFor(o => o.AppID);
                @Html.HiddenFor(o=>o.APPVersionID);
            @Html.HiddenFor(o=>o.CreateDate);
                <div class="form-group col-lg-12">
                    <label class="col-lg-2 control-label"><em>*</em>程序版本:V</label>
                    <div class="col-lg-3">
                        @*<input id="actNum" value="100" class="form-control" name="" max="1000000" type="text">*@
                        @Html.TextBoxFor(o => o.Version, new { @class = "form-control" })
                    </div>
                </div>
                <div style="clear:both;"></div>

                <div class="form-group col-lg-12">
                    <label class="col-lg-2 control-label"><em>*</em>更新介绍:</label>
                    <div class="col-lg-3">
                        @Html.TextBoxFor(o => o.Remark, new { @class = "form-control" })
                    </div>
                </div>
                <div style="clear:both;"></div>

                <div class="form-group col-lg-12">
                    <label class="col-lg-2 control-label"><em>*</em>更新文件:</label>
                    <div class="col-lg-3">
                        @Html.TextBoxFor(o => o.Url, new { @class = "form-control", @readonly = "true" })
                        @*@Html.Hidden("SaveName")*@
                        <input type="file" name="txt_file" id="txt_file" value="添加文件" />
                    </div>
                </div>
                <div class="form-group col-lg-12">
                    <label class="col-lg-2 control-label"><em>*</em>文件MD5值:</label>
                    <div class="col-lg-3">
                        @Html.TextBoxFor(o => o.MD5, new { @class = "form-control",@readonly="true" })
                        @*@Html.Hidden("SaveName")*@

                    </div>
                </div>
                <div style="clear:both;"></div>
                <div class="form-group col-lg-12">
                    <label class="col-lg-2 control-label"><em>*</em>强制更新:</label>
                    <div class="col-lg-3" style=" margin-top:5px;">
                        <input type="checkbox" class="" @(Model.IsForce==1?"checked='checked'":null) name="IsForce" />
                    </div>
                </div>
                <div style="clear:both;"></div>
                <div class="form-group col-lg-12">
                    <label class="col-lg-2 control-label"><em>*</em>状态:</label>
                    <div class="col-lg-3">
                        @Html.DropDownListFor(o => o.Status, new List<SelectListItem> { new SelectListItem { Text = "未启用", Value = "0" }, new SelectListItem { Text = "启用", Value = "1" }, new SelectListItem { Text = "禁用", Value = "2" } })
                    </div>
                </div>
                <div style="clear:both;"></div>

                <div class="modal-footer" style=" text-align:left; padding-left:300px;">
                    <input type="button" onclick="location.reload();" class="btn btn-default" style="margin-right:40px; width:100px;" value="取消" />
                    <input type="button" onclick="submitForm()" value="确定" class="btn btn-danger" style="width:100px;" />
                    <div style="clear:both; height:100px;"></div>
                </div>
                @*</form>*@
            }

        </div>
    </div>

</div>
<script>

</script>


