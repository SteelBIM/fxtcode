@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_LayoutHome.cshtml";
}
@section cssLink{
    <link href="~/Content/bootstrap-table-develop/src/bootstrap-table.css" rel="stylesheet" />
    <link href="~/Scripts/BootstrapSelect/bootstrap-select.css" rel="stylesheet" />
}
@section mainContent{
    <div class="col-lg-12">
        <h1 class="page-header">员工商务策略设置</h1>
    </div>
    <div class="tree" style="width:10%; float:left; overflow-x:auto; background-color:#fff;">
        <div id="tree">
        </div>
    </div>
    <div class="row" style=" width:90%; float:left; margin-left:10px;">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body" style="padding-bottom:0px;">
                    <div class="input-group col-lg-12" style=" width: 550px;">
                        <input type="text" placeholder="员工姓名" id="username" class="form-control" style="width:300px; margin-left:15px;" />
                        <button id="searchbtn" type="button" class="btn btn-default" style="float:left; margin-left:10px; background-color:#515562; color:#fff;">
                            <span class="glyphicon glyphicon-search" aria-hidden="true"></span>查询
                        </button>
                    </div>
                    <div style="clear:both;"></div>
                    <div id="actionset">
                    </div>
                    <table id="tb_departments"></table>
                    <input id="deptid" type="hidden" value="0" />
                </div>
            </div>
        </div>
    </div>
}
@section jsSrc{
    <script src="~/Content/bootstrap-table-develop/src/bootstrap-table.js"></script>
    <script src="~/Content/bootstrap-table-develop/src/locale/bootstrap-table-zh-CN.js"></script>
    <script src="~/Scripts/bootbox.js"></script>
    <script src="~/Scripts/pages/CompPolicyMgr.js"></script>
    <script src="~/Scripts/bootstrap-treeview.js"></script>
}

