    <![endif]-->
    @RenderSection("cssLink")

</head>
<body>
    <div id="wrapper">
        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" id="navbar"  role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand">方直科技营销管理系统</a>
            </div>
            @{
                KSWF.WFM.Constract.Models.com_master masterinfo = (Session["LoginInfo"] as KSWF.WFM.Constract.Models.com_master);
                var modulelist = Session["Action"] as List<KSWF.WFM.Constract.VW.vw_action>;
                List<KSWF.WFM.Constract.VW.vw_action> ParentList = new List<KSWF.WFM.Constract.VW.vw_action>();
                List<KSWF.WFM.Constract.VW.vw_action> list = new List<KSWF.WFM.Constract.VW.vw_action>();
            }
            <ul class="nav navbar-top-links navbar-right">
                <li>
                    <span style="color:#ffffff;">
                        欢迎您：
                        <a style=" font-size:14px; text-decoration:none; " href="/Account/Index"> @masterinfo.truename</a>
                    </span>
                </li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-user fa-fw"></i> <i class="fa fa-caret-down"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li>
                            @{
                                if (masterinfo.mastertype == 1)
                                {
                                    <a href="/AccountInfo/AgentIndex"><i class="fa fa-user fa-fw"></i> 个人资料</a>
                                }
                                else
                                {
                                    <a href="/AccountInfo/Index"><i class="fa fa-user fa-fw"></i> 个人资料</a>
                                }

                            }

                        </li>
                        <li class="divider"></li>
                        <li>
                            <a href="/Login/Index"><i class="fa fa-sign-out fa-fw"></i> 退出</a>
                        </li>
                    </ul>
                </li>
            </ul>
            <div class="navbar-default sidebar"  role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">
                        @{
                            if (modulelist != null && modulelist.Count > 0)
                            {
                                foreach (var item in modulelist)
                                {
                                    if (ParentList.Count == 0)
                                    {
                                        ParentList.Add(item);
                                    }
                                    else if (@item.parentcolumid == 0)
                                    {
                                        if (!ParentList.Exists(p => (p.parentcolumid == @item.parentcolumid && p.columnid == @item.columnid)))
                                        {
                                            ParentList.Add(item);
                                        }
                                    }
                                    else if (!ParentList.Exists(p => p.parentcolumid == @item.parentcolumid))
                                    {
                                        ParentList.Add(item);
                                    }
                                    if (list.Count == 0 || !list.Exists(p => p.columnid == @item.columnid))
                                    {
                                        list.Add(item);
                                    }
                                }
                                foreach (var item in ParentList)
                                {
                                    if (@item.parentcolumid == 0)
                                    {
                                        <li>
                                            <a href="/@item.actionurl/Index"><img style="width:20px; height:20px; margin-top:-2px" src="@item.columnico" /> @item.columnname</a>
                                        </li>
                                    }
                                    else
                                    {
                                        <li>
                                            <a href="javascript:;"><img style="width:20px; height:20px; margin-top:-2px" src="@item.columnico" />  @item.parentcolumname<span class="fa arrow"></span></a>
                                            <ul class="nav nav-second-level">
                                                @for (int i = 0; i < list.Count; i++)
                                                {
                                                    if (@item.parentcolumid == list[i].parentcolumid)
                                                    {
                                                        <li>
                                                            @if (list[i].columnname.Trim() != "商品列表" || masterinfo.agentid == KSWF.Core.Utility.PublicHelp.OrgId)
                                                            {
                                                                <a href="/@list[i].actionurl/Index">  @list[i].columnname</a>
                                                            }
                                                        </li>
                                                    }
                                                }
                                            </ul>
                                        </li>
                                    }
                                }
                            }
                        }
                    </ul>
                </div>
            </div>
        </nav>
        <div id="page-wrapper">
            @RenderSection("mainContent")
        </div>
    </div>
    <script src="../Template/vendor/jquery/jquery.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="../Template/vendor/bootstrap/js/bootstrap.js"></script>
    <!-- Metis Menu Plugin JavaScript -->
    <script src="../Template/vendor/metisMenu/metisMenu.js"></script>
    @RenderSection("jsSrc")
