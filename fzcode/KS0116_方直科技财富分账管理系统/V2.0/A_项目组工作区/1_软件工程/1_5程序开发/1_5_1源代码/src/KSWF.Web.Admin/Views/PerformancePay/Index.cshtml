@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_LayoutHome.cshtml";
}

<h2>Index</h2>

@section cssLink{
    <link href="~/Content/bootstrap-table-develop/src/bootstrap-table.css" rel="stylesheet" />
    <style type="text/css">
        .modal-dialog {
            z-index: 999999;
        }
    </style>
}
@section mainContent{
    <div style="margin:15px 0;">
        <ul class="nav nav-pills">
            <li go="0" class="active">
                <a href="#agent1" data-toggle="tab">代理商</a>
            </li>
            <li go="1">
                <a href="#comp" data-toggle="tab">公司员工</a>
            </li>
            <li go="2">
                <a href="#section" data-toggle="tab">公司部门</a>
            </li>
        </ul>

    </div>
    
    <div class="col-lg-12 tab-pane fade in active" id="agent1">
       
            <div class="panel panel-default">
                <div class="panel-body">
                    <input id="ptype" value="0" type="hidden" />
                
                    <div class="tab-content">
            <div class="col-sm-12" style="margin-top:10px; margin-left:-15px;">
                <div class="input-group col-lg-8">
                    <span style="float:left; line-height:35px;"> 代理商：</span>
                    <div class="col-sm-3">
                        <select class="form-control">                                        
                                            
                        </select>
                    </div>    
                    <div class="col-sm-3" style="margin-left:-15px;">
                        <div class="input-group col-lg-3">
                            <input type="text" value="" class="form-control" placeholder="负责人姓名、渠道经理" id="searchkey" style="width:300px;"/>
                            <span class="input-group-btn">
                                <button id="searchbtn" type="button" class="btn btn-default" style="float:left;">
                                    <span class="glyphicon glyphicon-search" aria-hidden="true"></span>搜索
                                </button>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-12" style="margin-top:10px; margin-left:-15px;">
                <div class="col-lg-3">
                    <span style="float:left; line-height:35px; margin-left:-15px;">未结算销售额:10000</span>                                                          
                </div>
                <div class="col-lg-3">
                    <span style="float:left; line-height:35px; margin-left:15px;">未结算订单数:10000</span>                                                          
                </div> 
                <div class="col-lg-3">
                    <span style="float:left; line-height:35px; margin-left:15px;">未结算总金额:10000</span>                                                          
                </div>  
            </div>
            <div id="agent1Toolbar" class="btn-group">
            </div>
            <table id="tb_agent1Departments"></table>
                            </div>
                    </div>
                </div>
            
        </div>

    <div class="tab-pane fade" id="comp">
        <div style="width:10%; float:left; overflow-x:auto; ">
            <div id="tree">
            </div>
        </div>
        <div class="row" style=" width:90%; float:left; margin-left:10px;">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <input id="ptype" value="0" type="hidden" />
                
                    <div class="tab-content">
            <div class="col-lg-12" style="margin-top:10px; margin-left:-15px;">
                    <div class="input-group col-lg-8">
                        <span style="float:left; line-height:35px;"> 员工姓名：</span>
                        <div class="col-sm-3">
                            <select class="form-control">                                        
                                            
                            </select>
                        </div>                               
                    </div>
            </div>
            <div class="col-lg-12" style="margin-top:10px; margin-left:-15px;">
                    <div class="col-lg-3">
                        <span style="float:left; line-height:35px; margin-left:-15px;">未结算销售额:10000</span>                                                          
                    </div>
                    <div class="col-lg-3">
                        <span style="float:left; line-height:35px; margin-left:15px;">未结算订单数:10000</span>                                                          
                    </div> 
                    <div class="col-lg-3">
                        <span style="float:left; line-height:35px; margin-left:15px;">未结算总金额:10000</span>                                                          
                    </div>  
            </div>
            <div id="toolbar" class="btn-group">

            </div>
            <table id="tb_departments"></table>
                            </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="tab-pane fade" id="section">
        <div style="width:10%; float:left; overflow-x:auto; ">
            <div id="tree1">
            </div>
        </div>
        <div class="row" style=" width:90%; float:left; margin-left:10px;">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <input id="ptype" value="0" type="hidden" />
                
                    <div class="tab-content">
            <div class="col-sm-12" style="margin-top:10px; margin-left:-15px;">
                    <div class="input-group col-lg-8">
                        <span style="float:left; line-height:35px;"> 部门负责人：</span>
                        <div class="col-sm-3">
                            <select class="form-control">                                        
                                            
                            </select>
                        </div>                               
                    </div>
            </div>
            <div class="col-sm-12" style="margin-top:10px; margin-left:-15px;">
                    <p>说明：部门提成为相关订单找不到具体的销售人员，将此订单归属于部门提成金额</p>   
            </div>
                        
            <div id="sectionToolbar" class="btn-group">
            </div>
            <table id="tb_sectionDepartments"></table>
                            </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
                    
               
}

@section jsSrc{
    <script src="~/Content/bootstrap-table-develop/src/bootstrap-table.js"></script>
    <script src="~/Content/bootstrap-table-develop/src/locale/bootstrap-table-zh-CN.js"></script>
    <script src="~/Scripts/bootbox.js"></script>
    <script src="~/Scripts/pages/PerformancePay.js"></script>
    <script src="~/Scripts/bootstrap-treeview.js"></script>
}

