@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_LayoutHome.cshtml";
}

<h2>CompPolicyMgr_Add</h2>

@section cssLink{
    <link href="~/Content/bootstrap-table-develop/src/bootstrap-table.css" rel="stylesheet" />

    <style type="text/css">
        .modal-dialog {
            z-index: 999999;
        }
    </style>
}
@section mainContent{
    <div class="col-lg-12">
        <h1 class="page-header"><span class="span1">批量编辑员工策略</span>
            <span class="glyphicon glyphicon-menu-left span2" onclick="location.href = '/CompPolicyMgr/Index'" style="border:1px solid #ddd; padding:7px; border-radius:3px; margin-left:10px; cursor:pointer;">
                            @*<input type="button" onclick="history.back();" class="btn btn-default" value="" />*@
                </span>
        </h1>
    </div>
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body" style="padding-bottom:0px;">
                <input type="hidden" id="MasterName" />
                <input type="hidden" id="MasterNames" value="@ViewBag.MasterNames" />
                <div class="col-sm-10" style="margin-top:10px; margin-left:-15px;">
                    <div class="input-group col-lg-8">
                        <input type="hidden" value="0" id="addnumber" />
                        <button type="button" class="btn btn-primary" style="float:left;" onclick="policy(0,'')">设置商务策略</button>
                        &nbsp;
                        @*<input type="button" onclick="history.back();" class="btn btn-default" value=" 返回上一层" />*@
                    </div>
                </div>
                <div style="clear:both;"></div>
                <div id="toolbar" class="btn-group">
                </div>
                <table id="tb_departments"></table>
            </div>
        </div>
    </div>
    <div class="modal fade" id="setbpolicypr" style=" overflow:auto;" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div style="clear:both; height:50px;"></div>
                <form id="PolicyForm" method="post" class="form-horizontal" style=" width:100%;" action="#">
                    <div class="row">
                        <div class="form-group">
                            <label class="col-lg-3 control-label"><em>*</em>产品名称:</label>
                            <div class="col-lg-5">
                                <select class="form-control" id="productname" name="productname">
                                    <option value="">请选择产品</option>
                                    @foreach (var v in ViewBag.ChannelList)
                                    {
                                        <option value="@v.Key">@v.Value</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div style="clear:both;"></div>
                        <div class="form-group">
                            <label class="col-lg-3 control-label"><em>*</em>策略名称:</label>
                            <div class="col-lg-5">
                                <select class="form-control" id="bpolicyprname" name="bpolicyprname"></select>
                            </div>
                        </div>
                        <div style="clear:both;"></div>
                        <div class="form-group">
                            <label class="col-lg-3 control-label"><em>*</em>生效日期:</label>
                            <div class="col-lg-5">
                                <input type="hidden" id="currentdate" value="@ViewBag.CurrentDate" />
                                <input type="text" data-options="" class="form-control" id="effectivedate" name="effectivedate" onfocus="WdatePicker({ dateFmt: 'yyyy-MM-dd', minDate: '#F{$dp.$D(\'currentdate\')}', readOnly: true })" />
                            </div>
                        </div>
                    </div>
                </form>
                <div style="clear:both; height:50px;"></div>
                <div class="modal-footer">
                    <input type="hidden" id="policyid" value="0" />
                    <input type="hidden" id="grouplogo" value="" />
                    <input type="hidden" id="viewnumber" value="0" />
                    <button type="button" class="btn btn-primary" id="btn_setbpolicypr">确定</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                </div>
            </div>
        </div>
    </div>
}

@section jsSrc{
    <script src="../Content/WdatePicker.js"></script>
    <script src="~/Content/bootstrap-table-develop/src/bootstrap-table.js"></script>
    <script src="~/Content/bootstrap-table-develop/src/locale/bootstrap-table-zh-CN.js"></script>
    <script src="~/Scripts/bootbox.js"></script>
    <script src="~/Scripts/bootstrap-treeview.js"></script>
    <script src="~/Scripts/pages/CompPolicyMgrbatch.js"></script>
    <script src="~/Content/bootstrapvalidator-master/dist/js/bootstrapValidator.js"></script>
}

