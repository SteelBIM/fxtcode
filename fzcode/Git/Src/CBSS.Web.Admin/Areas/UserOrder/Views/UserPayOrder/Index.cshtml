@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row-fluid">
    <div class="span8" style="width:100%; text-align:right;">
        <div class="dataTables_filter">
            <label>
                <span>支付状态：</span>
                @Html.DropDownList("PayStatus", ViewBag.select as SelectList, "请选择", new { @style = "width:180px" })
            </label>
            <label>
                <span>支付方式：</span>
                @Html.DropDownList("PayWay", ViewBag.select as SelectList, "请选择", new { @style = "width:180px" })
            </label>
            <div style="clear:both;"></div>
          
            @if (ViewBag.Export)
            {
                <label>
                    <button type="submit" id="export" class="btn yellow">导出 <i class="icon-bar-chart"></i></button>
                </label>
            }
            <label>
                <button type="submit" id="searchbtn" class="btn yellow">搜索 <i class="icon-search"></i></button>
            </label>
            <label>
                <span>订单号：</span>
                @Html.TextBox("OrderID", null, new { @class = "m-wrap small" })
            </label>
            <label>
                <span>手机号：</span>
                @Html.TextBox("UserPhone", null, new { @class = "m-wrap small" })
            </label>
            <label>
                <span>用户名：</span>
                @Html.TextBox("UserName", null, new { @class = "m-wrap small" })
            </label>
            <label>
                <span>应用名称：</span>
                @Html.TextBox("AppName", null, new { @class = "m-wrap small" })
            </label>
        </div>
    </div>
</div>

<table class="table table-striped table-hover " id="tb_userpyaorder"></table>
@section PageSpecificJavascriptIncludes{
    <script src="~/Assets/pages/UserPayOrder.js"></script>
}