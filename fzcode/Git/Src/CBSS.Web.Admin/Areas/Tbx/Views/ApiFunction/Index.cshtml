@using CBSS.Web
@using CBSS.Framework.Contract
@using CBSS.Framework.Web.Controls
@{
    ViewBag.Title = "Index";
}
@using CBSS.Tbx.Contract.DataModel
@model PagedList<Sys_ApiFunction>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row-fluid">
    <div class="span4">
        <div>
            <a class="btn red" id="delete" href="javascript:;"><i class="icon-trash icon-white"></i> 删除</a>
            <a class="btn blue thickbox" title='' href="@Url.Action("Create")?TB_iframe=true&width=1000&height=800"><i class="icon-plus icon-white"></i> 新增</a>
            <a class="btn blue" id="btnApiDocument" target="_blank" href="javascript:void(0)" onclick="ApiDocumentClick()"><i class="icon-plus icon-white"></i> 接口文档</a>
        </div>
    </div>
    <div class="span8">
        @using (Html.BeginForm(null, null, null, FormMethod.Get, new { id = "search" }))
        {
            <div class="dataTables_filter">
                <label>
                    <button type="submit" class="btn">搜索 <i class="icon-search"></i></button>
                </label>
                <label>
                    <span>系统名称：</span>
                    <select name="SystemCode" id="SystemCode">
                        @if (ViewData["SystemEnum"] != null)
                        {
                            <option value="" >...请选择..</option>
                            foreach (var item in ViewData["SystemEnum"] as Dictionary<int, string>)
                            {
                                if (ViewData["SystemCode"] != null)
                                {
                                    if (ViewData["SystemCode"].ToString() == item.Key.ToString())
                                    {
                                        <option value="@item.Key" selected="selected">@item.Value</option>
                                    }
                                    else
                                    {
                                        <option value="@item.Key">@item.Value</option>
                                    }
                                }
                                else
                                {
                                    <option value="@item.Key">@item.Value</option>
                                } 
                            }
                        }
                    </select>
                </label>
                <label>
                    <span>接口名称：</span>
                    @Html.TextBox("ApiFunctionName", null, new { @class = "m-wrap small" })
                </label>
            </div>
        }
    </div>
</div>
@using (Html.BeginForm("Delete", "ApiFunction", FormMethod.Post, new { id = "mainForm" }))
{
    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th style="width: 8px;">
                    <input type="checkbox" id="checkall" class="group-checkable" />
                </th>
                <th>
                    系统编号
                </th>
                <th>
                    接口名称
                </th>
                <th>
                    接口描述
                </th>
                <th class="hidden-480">
                    接口地址
                </th>
                <th>
                    接口方式
                </th>
                <th>
                    操作
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model)
            {
                <tr>
                    <td><input type="checkbox" class="checkboxes" name='ids' value='@m.ApiFunctionID' /></td>
                    <td>
                        @m.SystemCode
                    </td>
                    <td>
                        @m.ApiFunctionName
                    </td>
                    <td>
                        @m.ApiFunctionExplain
                    </td>
                    <td>
                        @m.ApiFunctionUrl
                    </td>
                    <td>
                        @if (ViewData["ApiFuncWayEnum"] != null)
                        {
                            foreach (var item in ViewData["ApiFuncWayEnum"] as Dictionary<int, string>)
                            {
                                if (m.ApiFunctionWay == item.Key)
                                {
                                    @item.Value
                                    break;
                                }
                            }
                        }
                    </td>
                    <td>
                        <a class="btn mini purple thickbox" title='编辑' href="@Url.Action("Edit", new { id = m.ApiFunctionID })?TB_iframe=true&width=1000&height=800">
                            <i class="icon-edit"></i>
                            编辑
                        </a>
                    </td>
                </tr>

            }
        </tbody>
    </table>
}
<script src="@Url.StaticFile("/assets/js/jquery-1.8.3.min.js")"></script>
<script type="text/javascript">
    function ApiDocumentClick() {
        var chk_value = [];
        $('input[name="ids"]:checked').each(function () {
            chk_value.push($(this).val());
        });
        var ApiFunctionName = $("#ApiFunctionName").val().trim();
        var SystemCode = $("#SystemCode").val().trim();
        var parms = "ApiFunctionName=" + ApiFunctionName + "&SystemCode=" + SystemCode + "";
        window.open("/tbx/ApiFunction/ApiDocument?" + parms);
    }
</script>
<div class="dataTables_paginate paging_bootstrap pagination">
    @Html.Pager(Model, new PagerOptions() { ShowTotalItemCount = true })
</div>
