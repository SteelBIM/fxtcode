@{
    Layout = "~/Views/Shared/_Layout.Edit.cshtml";
}
@using CBSS.Web
@using CBSS.Tbx.Contract.DataModel
@model  ModelImgLibrary

@section MainContent{
    <div class="portlet-body form-horizontal form-bordered form-row-stripped">
        <div class="row-fluid">
            <div class="control-group">
                <label class="control-label">模型名称：</label>
                <div class="controls">
                    <span>
                        @(ViewData["ModelName"] != null ? (ViewData["ModelName"] as Model).ModelName : "")
                    </span>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label"><span class="required">*</span>图片名称：</label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.ImgName, new { @class = "m-wrap small", @style = "min-width:300px" })
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.ImgName)</span>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">图片格式：</label>
                <div class="controls">
                    @Html.DropDownList("ImgType")
                </div>
            </div>
            <div class="control-group">
                <label class="control-label"><span class="required">*</span>上传图片：</label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.ImgPath, new { @class = "m-wrap small", @style = "min-width:300px;" })
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.ImgPath)</span>
                    <div id="OssUploadControl">
                        <div id="ossfile">你的浏览器不支持flash,Silverlight或者HTML5！</div>
                        <br />
                        <div id="container" style="border:0px;">
                            <a id="selectfiles" href="javascript:void(0);" class='btn'>选择文件</a>
                            <a id="postfiles" href="javascript:void(0);" class='btn'>开始上传</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<script src="@Url.StaticFile("/assets/js/jquery-1.8.3.min.js")"></script>
<link href="@Url.StaticFile("/assets/aliyunupload/OssUploadControl.css")" rel="stylesheet" />
<script src="@Url.StaticFile("/assets/aliyunupload/lib/crypto1/crypto/crypto.js")"></script>
<script src="@Url.StaticFile("/assets/aliyunupload/lib/crypto1/hmac/hmac.js")"></script>
<script src="@Url.StaticFile("/assets/aliyunupload/lib/crypto1/sha1/sha1.js")"></script>
<script src="@Url.StaticFile("/assets/aliyunupload/plupload.js?v=1.3")"></script>
<script src="@Url.StaticFile("/assets/aliyunupload/upload.js?v=1.9")"></script>  
<script type="text/javascript">
    $('#ImgPath').attr("readonly",true); 
</script>