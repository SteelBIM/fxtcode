        <thead>
            <tr>
                <th>版本号</th>
                <th>
                    类别
                </th>
                <th>
                    应用名称
                </th>
                <th>
                    版本描述
                </th>
                <th>
                    状态
                </th>
                <th>
                    发布时间
                </th>
                <th>
                    操作
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model)
            {
                <tr>
                    <td>
                        @m.SkinVersionNumber
                    </td>
                    <td>
