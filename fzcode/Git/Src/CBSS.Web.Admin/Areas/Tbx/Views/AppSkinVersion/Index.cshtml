                    <td>
                        @m.CreateDate.ToString("yyyy-MM-dd HH:mm:ss")
                    </td>
                    <td>
                        <a class="btn mini purple thickbox" title='编辑' href="@Url.Action("Edit", new { id = m.SkinVersionID })?TB_iframe=true&height=520&width=600">
                            <i class="icon-edit"></i>
                            编辑
                        </a>
                    </td>
                </tr>
            }
