@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .row1 {
        margin-left:30px;
    }
    .row1 label{
        margin-bottom:0;
        width:150px;
    }
        .row1 .form-group{
            margin-bottom:15px;
        }
</style>

<div id="toolbar" class="input-group" style="float: left;margin-top: 0;margin-bottom: 0;">
    <button style="background-color:#808080;color:#fff; border-color: #F7C727; border-radius:5px;" onclick="AddParent()" type="button" class="btn btn-default"><span class="glyphicon glyphicon-export" aria-hidden="true"></span>+新增顶级目录 </button>
</div>
<div class="panel-body" style="padding-bottom:0px;">
    <table id="tb_classifies"></table>
</div>
<input type="hidden" id="serverUrl" value="@Url.Action("GetCatalogsJson")" />
<input type="hidden" id="getClassify" value="@Url.Action("GetCatalog")" />
<input type="hidden" id="delUrl" value="@Url.Action("DeleteMarketBookCatalog")" />
<div style="clear:both"></div>
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title" id="myModalLabel">编辑目录</h4>
            </div>
            <div class="modal-body">
                <div class="row row1">
                    <div class="col-lg-12">
                        <form action="@Url.Action("Submit")" class="form-horizontal" role="form" id="formEdit">
                            <input type="hidden" name="MarketClassifyID" id="MarketClassifyID" />
                            <input type="hidden" name="ParentId" id="ParentId" />
                            <label class="col-lg-3" style="text-align:right;float:left;">目录名称：</label>
                            <input type="hidden"  />
                            <div class="form-group">
                                <div class="col-lg-8">
                                    <input class="form-control" name="MarketClassifyName" id="MarketClassifyName" />
                                </div>
                            </div>
                            <label class="col-lg-3" style="text-align:right;float:left">目录属性：</label>
                            <div class="form-group">
                                <div class="col-lg-8">
                                    <input class="form-control" name="MarketClassifyProperty" id="MarketClassifyProperty" />
                                </div>
                            </div>
                            <label class="col-lg-3" style="text-align:right;float:left">市场类型：</label>
                            <div class="form-group">
                                <div class="col-lg-8">                                 
                                    <select class="form-control" name="MarketID" id="MarketID">
                                        <option value="1">同步教材 </option>
                                        <option value="2">老MOD同步教材</option>
                                    </select>
                                </div>
                            </div>
                            <label class="col-lg-3" style="text-align:right;float:left">MOD类型：</label>
                            <div class="form-group">
                                <div class="col-lg-8">
                                    @*1学科2版本3年级4册别5学段*@
                                    <select class="form-control" id="MODType" name="MODType">
                                        <option value="1">学科</option>
                                        <option value="2">版本</option>
                                        <option value="3">年级</option>
                                        <option value="4">册别</option>
                                        <option value="5">学段</option>
                                    </select>
                                </div>
                            </div>
                            @*<label class="col-lg-3" style="text-align:right;float:left">MOD市场目录：</label>
                            <div class="form-group">
                                <div class="col-lg-8">
                                    <select id="MODID" name="MODID"><option value="0">无</option></select>
                                </div>
                            </div>*@
                            <input type="hidden" id="MODID" name="MODID" />
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" onclick="submitForm()"  class="btn btn-primary" id="btn_editSave">保存</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
            </div>
        </div>
    </div>
</div>
@section PageSpecificJavascriptIncludes{
    <link href="~/Content/Scripts/bootstrap-table-develop/src/bootstrap-table.css" rel="stylesheet" />
    <script src="~/Content/Scripts/bootstrap-table-develop/src/bootstrap-table.js"></script>
    <script src="~/Content/Scripts/bootstrap-table-develop/src/locale/bootstrap-table-zh-CN.js"></script>
    <script src="~/Assets/pages/MarketBookCatalog.js"></script>
    <script>
        $(function () {
            oTableInit.Init();
        });
    </script>

}

