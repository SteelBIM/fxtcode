@using CBSS.Web
@using CBSS.Cfgmanager.Contract.DataModel
@model  Log4net
@{
    ViewBag.Title = "查看日志";
    Layout = "~/Views/Shared/_Layout.Edit.cshtml";
}
<script src="@Url.StaticFile("/assets/js/jquery-1.8.3.min.js")"></script>
<div style="padding:10px;">
    @if (Model != null)
    {
        <div style="width:100%; text-align:center; font-size:24px; padding-bottom:40px">日志信息</div>
        <div class="form-group">
            <div class="col-sm-2">
                <span style="padding-left:40px;">Id：</span>
                <input class="form-control" id="Id" type="text" value="@Model.Id" style="width:40%;"readonly="readonly" />
                <span class="required"></span>消息类型：
                <input class="form-control" id="Level" value="@Model.Level" type="text" style="width:40%;" readonly="readonly" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-2">
                日志类型：
                <input class="form-control" id="Logger" value="@Model.Logger" type="text" style="width:40%;" readonly="readonly"/>
                <span style="padding-left:26px;">时间： </span>
                <input class="form-control" id="Date" value="@Model.Date" type="text" style="width:40%;" readonly="readonly"/>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-1">
                <span class="required"></span>Message：
                <textarea id="Message" style="width:80%; min-height:200px;">@Model.Message</textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-1">
                <span class="required"></span>Exception：
                <textarea id="Message" style="width:80%; min-height:300px;">@Model.Exception</textarea>
            </div>
        </div>
    }
    else
    {
        <div style="width:100%; text-align:center; font-size:24px; padding-top:10px; color:red;">未找到当前日志信息</div>
    }
</div> 
<script type="text/javascript">
    $(function () {
        $("#submit").hide();
    });
    
</script>