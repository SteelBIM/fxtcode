@using CBSS.Web
@using CBSS.Framework.Contract
@using CBSS.Tbx.Contract.ViewModel
@using CBSS.Framework.Web.Controls

@model PagedList<UserInfoModel>
@{
    ViewBag.Title = "用户管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row-fluid">
    <div class="span4">
    </div>
    <div class="span8">
        @using (Html.BeginForm(null, null, null, FormMethod.Get, new { id = "search" }))
            {
            <div class="dataTables_filter">
                <label>
                    <button type="submit" class="btn">搜索 <i class="icon-search"></i></button>
                </label>
                <label>
                    <span>手机号：</span>
                    @Html.TextBox("TelePhone", null, new { @class = "m-wrap small" })
                </label>
                <label>
                    <span>用户名：</span>
                    @Html.TextBox("UserName", null, new { @class = "m-wrap small" })
                </label>
                <label>
                    <span>姓名：</span>
                    @Html.TextBox("TrueName", null, new { @class = "m-wrap small" })
                </label> 
            </div>
        }
    </div>
</div>
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "mainForm" }))
{
    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                @*<th style="width: 8px;">
                        <input type="checkbox" id="checkall" class="group-checkable" />
                    </th>*@
                <th>用户名</th>
                <th>
                    应用名称
                </th>
                <th>
                    角色
                </th>
                <th>
                    注册时间
                </th>
                <th>
                    姓名
                </th>
                <th>
                    手机号
                </th>
                <th>
                    省
                </th>
                <th>
                    市
                </th>
                <th>
                    区/县
                </th>
                <th>
                    学校
                </th>
                <th>
                    班级
                </th>
                <th>
                    注册设备
                </th>
                <th>
                    渠道信息
                </th>
                <th>
                    详情
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model)
            {
                <tr>
                    @*<td>
                            <input type="checkbox" class="checkboxes" name='ids' value='@m.AppID' />
                        </td>*@
                    <td>
                        @m.UserName
                    </td>
                    <td>
                        @m.AppName
                    </td>
                    <td> 
                        @(CBSS.Core.Utility.EnumHelper.GetEnumDesc<CBSS.Framework.Contract.UserTypeEnum>(m.UserType))
                    </td>
                    <td>
                        @m.Regdate
                    </td>
                    <td>
                        @m.TrueName
                    </td>
                    <td>
                        @m.TelePhone
                    </td>
                    <td>
                        @m.Province
                    </td>
                    <td>
                        @m.City
                    </td>
                    <td>
                        @m.Area
                    </td>
                    <td>
                        @m.SchoolName
                    </td>
                    <td>
                        @m.ClassName
                    </td>
                    <td>
                        @m.DeviceType
                    </td>
                    <td></td>
                    <td>
                        <a class="btn mini purple thickbox" title='详情' href="@Url.Action("MarketBookDetail", new { id = m.UserID })?TB_iframe=true&height=520&width=600">
                            <i class="icon-edit"></i>
                            详情
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
<div class="dataTables_paginate paging_bootstrap pagination">
    @Html.Pager(Model, new PagerOptions() { ShowTotalItemCount = true })
</div>