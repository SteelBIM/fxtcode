<?xml version="1.0" encoding="utf-8" ?>
<configuration>

  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,log4net" />
  </configSections>

  <!--指定日志输出目录-->
  <log4net debug="true">
    <root>
      <level value="INFO" />
      <!--指定将此级别及以上的log打印到log文件中-->
      <appender-ref ref="RollingLogFileAppender" />
      <appender-ref ref="ConsoleAppender" />
    </root>

    <appender name="RollingLogFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="Log/app.log" />
      <!--
      file可以指定具体的路径,不指定的话log被生成在项目的bin/Debug或者 bin/Release目录下 
      （web的项目 默认生成在根目录下）
      -->
      <appendToFile value="true" />
      <rollingStyle value="Size" />
      <maxSizeRollBackups value="100" />
      <!--备份log文件的个数最多10个-->
      <maximumFileSize value="200MB" />
      <!--每个log文件最大是2M，如果超过2M将重新创建一个新的log文件，并将原来的log文件备份。-->
      <staticLogFileName value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <!-- 指定log的格式[%date]  %thread-%-5level-%logger [%M] - %m%n -->
        <conversionPattern value="[%d{yyyy-MM-dd HH:mm:ss}] %p %c{3} - %m%n" />
      </layout>
    </appender>

    <!--打印控制台日志信息-->
    <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender"
              level="DEBUG">
      <layout type="log4net.Layout.PatternLayout">
        <param name="ConversionPattern" value="[%d{yyyy-MM-dd HH:mm:ss}] %p %c{3} - %m%n" />
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <param name="LevelMin" value="DEBUG" />
        <param name="LevelMax" value="DEBUG" />
      </filter>
    </appender>
  </log4net>

  <appSettings>
    <!--每次导入数据前更新日期范围-->
    <add key="StartTime" value="2015-11-21"/>
    <add key="EndTime" value="2015-12-7"/>
    
    <!--数据导入正式库后是否从源数据库移除,true:移除-->
    <add key="RemoveData" value="false"/>
    <!--下面参数不要改-->
    <add key="BatchCommit" value="10"/>
    <add key="CityList" value="1, 2, 6, 7"/>
  </appSettings>
  <connectionStrings>
    <add name="CaseUrl" connectionString="Data Source=192.168.0.5;Initial Catalog=FxtData_Case;User ID=fxtbase_user;Password=base*cn.com;connect timeout=500"/>
  </connectionStrings>

  <system.serviceModel>

    <client>
      <endpoint address="http://localhost:9800/ProviderService"
        binding="basicHttpBinding" 
        contract="ProviderServiceRef.IProviderService" />
    </client>
  </system.serviceModel>
  
</configuration>