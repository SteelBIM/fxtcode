<?xml version="1.0" encoding="utf-8"?>
<access-policy>
  <cross-domain-access>
    <policy>
      <allow-from http-request-headers="*"> <!-- 所有的http请求 -->
        <domain uri="*"/>    <!-- 所有的uri "http、https"等等 -->
      </allow-from>
      <grant-to>
        <resource path="/" include-subpaths="true"/>   <!-- 所有的根目录资源 -->
      </grant-to>
    </policy>
  </cross-domain-access>
</access-policy>