<body>
    <div class="page-content" style="padding-bottom:0px;">
        <div class="page-header">
            <h1>
                用户信息
            </h1>
        </div><!-- /.page-header -->

        <div class="row">
            <div class="col-xs-12" id="SubmitPanel">
                <!-- PAGE CONTENT BEGINS -->
                <form class="form-horizontal" role="form">
                    <div class="form-group ">
                        <div class="form-group diy_form-group2">
                            <label class="col-sm-3  no-padding-right diy_fromlabel"> 公司 </label>
                            <div class="col-sm-9 diy_fromdiv2">
                                <input type="text" disabled="disabled" value="@Model.CompanyName" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-group diy_form-group">
                            <label class="col-sm-3  no-padding-right diy_fromlabel"> 用户名 </label>
                            <div class="col-sm-9 diy_fromdiv">
                                <input type="text" disabled="disabled" id="txtUserName" value="@Model.UserName" />
                            </div>
                        </div>
                        <div class="form-group diy_form-group">
                            <label class="col-sm-3  no-padding-right diy_fromlabel"> 姓名 </label>
                            <div class="col-sm-9 diy_fromdiv">
                                <input type="text" disabled="disabled" id="txtTrueName" value="@Model.TrueName" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-group diy_form-group">
                            <label class="col-sm-3  no-padding-right diy_fromlabel"> 电话 </label>
                            <div class="col-sm-9 diy_fromdiv">
                                <input type="text" disabled="disabled" value="@Model.Mobile" />
                            </div>
                        </div>
                        <div class="form-group diy_form-group">
                            <label class="col-sm-3  no-padding-right diy_fromlabel"> 小组 </label>
                            <div class="col-sm-9 diy_fromdiv">
                                <select style="width:70%;" id="selectDepartment">
                                    <option value="0">-请选择-</option>
                                    @{
                                        var du = ViewBag.Department as DepartmentUser ?? new DepartmentUser();
                                        var ds = ViewBag.DepartmentList as List<Department>;
                                        if (ds != null && ds.Count > 0)
                                        {
                                            foreach (Department d in ds)
                                            {
                                                <option value="@d.DepartmentId" @(du.DepartmentID == d.DepartmentId ? " selected=\"selected\"" : "")=)>@d.DepartmentName</option>
                                            }
                                        }
                                    }

                                </select>
                                <a href="javascript:LocationDer('@WebCommon.Url_DepartmentInfo_DepartmentManager');">创建组</a>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-group diy_form-group2">
                            <label class="col-sm-3  no-padding-right diy_fromlabel"> 角色 </label>
                            <div class="col-sm-9 diy_fromdiv2" id="cbRoleIds">
                                @{
                                    var sru = ViewBag.RoleUser as List<int>;
                                    var srs = ViewBag.RoleList as List<SYS_Role>;
                                    if (srs != null && srs.Count > 0)
                                    {
                                        foreach (SYS_Role sr in srs)
                                        {
                                            <label>
                                                <input name="form-field-checkbox" type="checkbox" value="@sr.Id" class="ace"
                                                       @(sru.Contains(sr.Id) ? "checked=\"checked\"" : "")
                                                       @(sr.Id == ViewBag.RoleAdminId ? " disabled=\"disabled\"" : "") />
                                                <span class="lbl">@sr.RoleName</span>
                                            </label>
                                        }
                                    }
                                }
                            </div>
                        </div>
                    </div>
                    <div class="alert alert-danger diy_alert-danger" style="display:none;" id="errorAlert">
                        系统异常
                    </div>
                    <div class="clearfix form-actions diy_form-actions">
                        <div class="col-md-offset-3 col-md-9 col-sm-3">
                            <input class="btn btn-info" type="button" value="提交" id="btnSubmit" />
                        </div>
                    </div>

                </form>
