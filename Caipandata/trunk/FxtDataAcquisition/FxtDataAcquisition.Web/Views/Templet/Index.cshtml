@using FxtDataAcquisition.Common;
@{
    ViewBag.Title = "模板";
    Layout = null;
    List<int> functionCodes = (ViewBag.FunctionCodes as List<int>) ?? new List<int>();
}

<!--整块-->
<div class="row">
    <!--整块-->
    <div class="col-xs-12">
        <!--第一个表格-->
        <div class="row" id="templetPanel">
            <div class="col-xs-12">
                <div class="col-xs-6 col-sm-3 diy_col_left" style="width:15%" id="topOperate">
                    <button class="btn btn-xs btn-danger diy_btn topOperate" id="btnDelete">
                        删除
                        <i class="ace-icon fa fa-times icon-on-right bigger-110"></i>
                    </button>
                    共<span id="templetCountShow">0</span>条
                </div>
                <div class="col-xs-6 col-sm-9 diy_col_right" style="width:85%">
                    <input type="text" placeholder="模板名称" class="search-query" style="width:150px;" id="tempLetName">
                    &nbsp;
                    <select id="dataType" data-nowid="">
                        <option value="0">---类型--</option>
                        <option value="@SYSCodeManager.DATATYPECODE_1">楼盘</option>
                        <option value="@SYSCodeManager.DATATYPECODE_2">楼栋</option>
                        <option value="@SYSCodeManager.DATATYPECODE_4">房号</option>
                    </select>
                    &nbsp;
                    <button type="button" class="btn btn-inverse btn-xs diy_search_btn" id="btnSearch">
                        搜索
                        <i class="ace-icon fa fa-search icon-search icon-on-right bigger-110"></i>
                    </button>
                    <button class="btn btn-xs btn-primary diy_btn" id="btnAddProject">
                        新增楼盘模板
                        <i class="ace-icon fa fa-plus icon-on-right bigger-110"></i>
                    </button>
                    <button class="btn btn-xs btn-primary diy_btn" id="btnAddBuilding">
                        新增楼栋模板
                        <i class="ace-icon fa fa-plus icon-on-right bigger-110"></i>
                    </button>
                    <button class="btn btn-xs btn-primary diy_btn" id="btnAddHouse">
                        新增房号模板
                        <i class="ace-icon fa fa-plus icon-on-right bigger-110"></i>
                    </button>
                </div>
            </div>
            <div class="col-xs-12">
                <div class="table-responsive">
                    <table id="sample-table-1" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th class="center">
                                    <label id="cbAllPanel">
                                        <input type="checkbox" class="ace" id="cbAll">
                                        <span class="lbl"></span>
                                    </label>
                                </th>
                                <th>模板名称</th>
                                <th>模板类型</th>
                                <th>是否默认</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody id="templetRowList">
                            <tr id="templetRow" style="display:none;">
                                <td class="center" width="100">
                                    <label class="cbPanel">
                                        <input type="checkbox" class="ace cb_select">
                                        <span class="lbl"></span>
                                    </label>
                                </td>
                                <td class="center">
                                    <span class="txt_templetname" data-statusid="">模板名称</span>
                                </td>
                                <td>
                                    <span class="txt_datatypename" data-statusid="">模板类型</span>
                                </td>
                                <td>
                                    <span class="txt_iscurrent" data-statusid="">是否默认</span>
                                </td>
                                <td width="200">
                                    <div class="visible-md visible-lg hidden-sm hidden-xs btn-group">
                                        <button class="btn btn-minier btn-primary op_editHouse btn_edit" style="margin-right:5px" data-templetid="">修改</button>
                                        <button class="btn btn-minier btn-danger op_editHouse btn_delete" style="margin-right:5px" data-templetid="">删除</button>
                                        <button class="btn btn-minier btn-success op_editHouse btn_setcurrent" style="margin-right:5px" data-templetid="" data-type="">设置默认</button>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div><!-- /.table-responsive -->
            </div><!-- /span -->
            <div class="col-xs-12">
                <input type="hidden" value="" id="hdTempletCount" />
                <ul id="example" data-count=""></ul>
            </div>
        </div>

    </div>
</div>
<script type="text/javascript">
    var scripts = [null, "/Scripts/Templet/TempletManager.js"]
    ace.load_ajax_scripts(scripts, function () {
        TempletManager.init();
    });
</script>
