<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
@using FxtSpider.FxtApi.Model;
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>抓取后台维护与管理</title>    
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
        @*设置浏览器IE文本模式为最高版本*@
    </meta>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/bootstrap/matrix-admin00/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/bootstrap/matrix-admin00/css/bootstrap-responsive.min.css" />
    <link rel="stylesheet" href="/bootstrap/matrix-admin00/css/matrix-style.css" />
    <link rel="stylesheet" href="/bootstrap/matrix-admin00/css/matrix-media.css" />
     <link rel="stylesheet" href="/bootstrap/matrix-admin00/css/select2.css" />
    <link href="/bootstrap/matrix-admin00/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link href="/bootstrap/matrix-admin00/css/fonts.googleapis.com_css_family_Open_Sans_400,700,800.css" rel="stylesheet"  type='text/css'>    
    @*fancybox弹出框效果start*@
    <link href="/Scripts/jquery.fancybox-1.3.4/fancybox/jquery.fancybox-1.3.4.css" type="text/css" rel="Stylesheet" />
    <style type="text/css">
        .control-group .controls{margin-left:70px !important; width:500px !important;}
        .control-group .control-label{width:60px !important;}
        .control-group .control-label2{ padding-top:5px !important;}
        .control-group2 select{width:60px !important;}
        .control-group2 .select2-container{width:125px !important; float:left; }
        .control-group3 .select2-container{width:80% !important;  }
        .alert-error{text-align:center;}
    </style>

    @*fancybox弹出框效果end*@
    <script src="/bootstrap/matrix-admin00/js/jquery.min.js" type="text/javascript"></script>
    <script src="/bootstrap/matrix-admin00/js/jquery.ui.custom.js" type="text/javascript"></script>
    <script src="/bootstrap/matrix-admin00/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="/bootstrap/matrix-admin00/js/jquery.uniform.js" type="text/javascript"></script>
    <script src="/bootstrap/matrix-admin00/js/select2.min.js" type="text/javascript"></script>
    <script src="/bootstrap/matrix-admin00/js/matrix.js" type="text/javascript"></script>    
    @*fancybox弹出框效果----start*@
    <script src="/Scripts/jquery.fancybox-1.3.4/fancybox/jquery.fancybox-1.3.4.js" type="text/javascript"></script>
    @*fancybox动画效果(可选*@)
    <script src="/Scripts/jquery.fancybox-1.3.4/fancybox/jquery.easing-1.3.pack.js" type="text/javascript"></script>
    @*fancybox鼠标滚轮滚动效果(可选)*@
    <script src="/Scripts/jquery.fancybox-1.3.4/fancybox/jquery.mousewheel-3.0.4.pack.js" type="text/javascript"></script>
    @*fancybox弹出框效果----end*@
    @*loadShow效果start*@
    <script src="/Scripts/jquery.blockUI.1.33/jquery.blockUI-1.33.js" type="text/javascript"></script>
    @*loadShow效果end*@
    <script src="/Scripts/jquery.extend.js" type="text/javascript"></script>
    <script src="/Scripts/Common/Common.js" type="text/javascript"></script>
    <script src="/Scripts/Common/CommonDataManager.js" type="text/javascript"></script>
    <script src="/Scripts/Project/AddProject_Fancybox.js?a=a" type="text/javascript"></script>
    <script type="text/javascript">
    $(function(){
       $('select').select2();//设置下拉框效果
    });
    </script>
</head>
<body>
<div class="widget-box">
        <div class="widget-title"> <span class="icon"> <i class="icon-align-justify"></i> </span>
          <h5>新建楼盘</h5>
        </div>
        <div class="widget-content nopadding">
          <div class="form-horizontal">
            <div class="control-group control-group2 selectCity">
                <label class="control-label">省份:</label>
                <div class="controls">
                    <select id="selectProvince">
                        <option value="0" @ViewBag.nowProvinceId==0?"selected='selected'":"">--全部--</option>
                        @foreach (FxtApi_SYSProvince prov in ViewBag.provinceList)
                        {
                        <option value="@prov.ProvinceId" @(ViewBag.nowProvinceId == prov.ProvinceId ? "selected='selected'" : "");>@prov.ProvinceName</option>
                        }
                    </select>
                    <label class="control-label control-label2">城市:</label>
                    <select id="selectCity">
                        <option value="0" @ViewBag.nowCityId==0?"selected='selected'":"">--全部--</option>
                        @foreach (FxtApi_SYSCity city in ViewBag.cityList)
                        {
                        <option value="@city.CityId" class="city" @(ViewBag.nowCityId==@city.CityId?"selected='selected'":"");>@city.CityName</option>
                        }
                    </select>
                    <label class="control-label control-label2">行政区:</label>
                    <select id="selectArea">
                         <option value="0" selected="selected">--全部--</option>
                         @foreach (FxtApi_SYSArea area in ViewBag.areaList)
                         {
                         <option value="@area.AreaId" class="area" @(ViewBag.nowAreaId == @area.AreaId ? "selected='selected'" : "");>@area.AreaName</option>
                         }
                    </select>
                </div>
            </div>
            <div class="control-group  control-group3 selectPurposeCode">
              <label class="control-label">主用途:</label>
              <div class="controls">
                <select id="selectPurposeCode">
                  <option value="0" selected="selected">--全部--</option>
                  @foreach (FxtApi_SYSCode code in ViewBag.purposeCodeList)
                  {
                   <option value="@code.Code">@code.CodeName</option>
                  }
                </select>
              </div>
             </div>
            <div class="control-group txtProjectName">
              <label class="control-label">楼盘名:</label>
              <div class="controls">
                <input type="text" class="span11" placeholder="楼盘名" value="@ViewBag.projectName" id="txtProjectName">
              </div>
            </div>
            <div class="control-group">
              <label class="control-label">地址:</label>
              <div class="controls">
                <textarea class="span11" placeholder="地址" id="txtAddress">@ViewBag.Address</textarea>
              </div>
            </div>
            <div class="control-group  alert alert-error" style="display:none;" id="titleError">
               
            </div>
            <div class="form-actions">
              <input type="button" id="btnSubmit"  class="btn btn-success" value="确定" />
            </div>
          </div>
        </div>
      </div>
</body>
</html>