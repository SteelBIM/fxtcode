@{
    ViewBag.Title = "登陆超时";
    Layout = "";
}
<script>
    var _u = decodeURI(getQueryStringByName("loginout"));
    if (_u != "") {
        alert("登录信息已过期，请重新登录");        
    } else {
        _u = "/";
    }
    top.location.href = _u;
    //根据QueryString参数名称获取值
    function getQueryStringByName(name) {
        var result = location.search.match(new RegExp("[\?\&]" + name + "=([^\&]+)", "i"));
        if (result == null || result.length < 1) {
            return "";
        }
        return result[1];
    }
</script>
