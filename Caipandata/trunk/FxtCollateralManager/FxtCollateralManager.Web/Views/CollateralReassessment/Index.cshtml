<script id="tab3_Tmpl" type="text/x-jquery-tmpl">
    <tr data-id="${Id}">
        <td>${Name}</td>
        <td>${PurposeCodeName}</td>
        <td>${BuildingArea}</td>
        <td>${OldRate}</td>
        <td>${Price}</td>
        <td>${CalculationMode}</td>
        <td>${PriceChange}%</td>
        <td>{{if ArrivedLoanRates<=0.6}}
            安全
            {{else ArrivedLoanRates>0.6&&ArrivedLoanRates<=0.8}}
