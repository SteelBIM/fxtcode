@{
    ViewBag.Title = "Index";
    Layout = "";
}

<div class="portlet-body" id="fileupload">
    <div class="form-inline">
        <form id="fupload" action="/Upload/fileUpload" method="post" enctype="multipart/form-data">
            <div class="fileupload-buttonbar">
                <label class="fileinput-button ui-button ui-widget ui-state-default ui-corner-all ui-button-text-icon-primary"  role="button">
                    <span class="ui-button-icon-primary ui-icon ui-icon-plusthick"></span><span class="ui-button-text">
                        选择文件...
                    </span>
                    <input type="file" name="file" id="file" multiple="multiple" />
                    <input type="hidden" name="type" id="type" value="list" />
                </label>


                <div class="actions">
                    <div class="input-group">
                        <div class="col-md-12">
                        <div class="row" style="width:700px; margin-bottom:5px;">
                            <div class="col-md-9">
                                <div class="input-group">
                                    <span class="input-group-addon" style="width:66px;" >
                                        银行
                                    </span>
                                    <select class="form-control notSelect"  style="width:120px;"
                                         id="upload_banksel" name="bankid" >
                                        
                                    </select>
                                    <span class="input-group-addon">
                                        项目
                                    </span>
                                    <select class="form-control notSelect" style="width:250px;" id="projectsel" name="proid" ><option value="0" >-请选择-</option></select>
                                  

                                </div>
                                  
                            </div>
                           <a class="btn green" href="#"  id="addproject" >新增项目  </a>
                        </div>
                    </div>
    
                     </div>                   
                </div>

                 <div class="actions">
                    <div class="input-group">
                        <div class="col-md-12">
                        <div class="row" style="width:580px;">
                            <div class="col-md-9">
                                <div class="input-group">
                                   
                                    <span class="input-group-addon">
                                        文件名
                                    </span>
                                  <input type="text" id="dialog_projectname"  class="form-control">
                          
                                </div>
                            </div>
                           
                           <button class="btn green" type="button" id="dialog_searchbankpro" >查询</button>

                        </div>
                    </div>
    
                     </div>                   
                </div>
            </div>
        </form>
        <div class="table-scrollable">
                <table class="table table-striped table-hover table-bordered" id="listupload">
                    <thead>
                        <tr>
                            <th>文件名</th>
                            <th>进度</th>
                            <th>文件类型</th>
                            <th>大小</th>
                            <th>上传时间</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
        </div>
        <div class="row">
            <div class="col-md-5 col-sm-12">
                <div id="dialog_page_info" class="dataTables_info">
                </div>
            </div>
            <div class="col-md-7 col-sm-12">
                <div class="dataTables_paginate paging_bootstrap">
                    <ul class="dialog_pagination"></ul>
                </div>
            </div>
        </div>
    </div>
</div>
<script id="upload_template" type="text/x-jquery-tmpl">
    <tr>
        <td>${Name}</td>
        <td data-val="${Id}" data-count="${Count}">
        ${$item.dataPercent($item.data)}
        </td>
        <td>${FileType}</td>
        <td>${$item.dataFileSize()}</td>
        <td class="center">${$item.dataFromat()}</td>
        <td><a href="javascript:;"
               url="/Upload/fileDelete/?id=${Id}&filename=${FilePath}"
               data-toid="listupload>tbody"
               data-type="D"
               data-rloadurl='/Upload/GetFiles'
               data-totempl='upload_template'>
                删除
            </a>
            <a href="javascript:;" class="notunbinding"
               data-file="${FilePath}"
               data-id="${Id}"
               data-pageindex="${PageIndex}"
               data-count="${Count}"
                onclick="AddTask(${BankId},${Id},${BankProid},0)"
                >
                标准化
            </a>
            
              <a href="javascript:;" data-val="${Id}" bankproid="${BankProid}" class="addtask" 
                 style="display:${(($item.data.FileSuccessCount ==$item.data.Count)? "" : "none")}" 
                 bankid="${BankId}"
               data-file="${FilePath}"
               data-id="${Id}"
               data-pageindex="${PageIndex}"
               data-count="${Count}"
               onclick="AddTask(${BankId},${Id},${BankProid},1)" 
                  >
                复估

            </a>
        </td>
    </tr>
</script>
<script id="templatefield" type="text/x-jquery-tmpl">
    <div class="row">
        <div class="col-md-12">
            <div class="portlet-body form">
                <form id="formupload" action="" class="form-horizontal" data-type="0">
                    <div class="form-body">
                        <input type="hidden" name="filename"/>
                        <!-- BEGIN FORM-->
