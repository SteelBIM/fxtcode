<div class="page-header" style="display:none">
    <h1>
        Tables
        <small>
            <i class="icon-double-angle-right"></i>
            Static &amp; Dynamic Tables
        </small>
    </h1>
</div>
<!--整块-->
<div class="row">
    <!--整块-->
    <div class="col-xs-12">
        <!--第一个表格-->
        <div class="row" id="userPanel">
            <div class="col-xs-12" style="text-align:right;">
                <select id="selectDepartment">
                    <option value="0">小组</option>
                    @foreach (FxtDataAcquisition.NHibernate.Entities.PriviDepartment obj in ViewBag.DepartmentList)
                    {
                        <option value="@obj.DepartmentId">@obj.DepartmentName</option>
                    }
                </select>
                <select id="selectRole">
                    <option value="0">角色</option>
                    @foreach (FxtDataAcquisition.NHibernate.Entities.SYSRole obj in ViewBag.RoleList)
                    {
                        <option value="@obj.ID">@obj.RoleName</option>
                    }
                </select>
                <input type="text" class="search-query" id="txtKeyword" placeholder="关键字">
                <button type="button" class="btn btn-inverse btn-xs diy_search_btn" id="btnSearch">
                    搜索
                    <i class="ace-icon fa fa-search icon-on-right bigger-110"></i>
                </button>
            </div>
            <div class="col-xs-12">
                <div class="table-responsive">
                    <table id="sample-table-1" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>用户名</th>
                                <th>状态</th>
                                <th>姓名</th>
                                <th class="hidden-480">电话</th>

                                <th>
                                    <i class="icon-time bigger-110 hidden-480"></i>
                                    小组
                                </th>
                                <th class="hidden-480">角色</th>

                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody id="userRowList">
                            <tr id="userRow" style="display:none;">
                                <td>
                                    <font class="txt_username fontshow"></font>
                                </td>
                                <td class="txt_uservalid"></td>
                                <td class="txt_truename"></td>
                                <td class="hidden-480 txt_mobile"></td>
                                <td class="txt_departmentname"></td>
                                <td class="hidden-480">
                                    <span class="label label-sm label-warning txt_rolenames"></span>
                                </td>
                                <td>
                                    <div class="visible-md visible-lg hidden-sm hidden-xs btn-group">
                                        <button class="btn btn-xs btn-info btn_edit" data-username="">
                                            <i class="ace-icon fa fa-edit bigger-120"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div><!-- /.table-responsive -->
            </div><!-- /span -->
            <div class="col-xs-12">
                <input type="hidden" value="" id="hdUserCount" />
                <ul id="example" data-count=""></ul>
            </div>
        </div>

    </div>
</div>
<input type="hidden" value="@ViewBag.UpdateRight" id="hdUpdateRight" />
<script type="text/javascript">
    var scripts = [null, null]
    ace.load_ajax_scripts(scripts, function () {
        //inline scripts related to this page
        jQuery(function ($) {
            $('#loading-btn').on(ace.click_event, function () {
                var btn = $(this);
                btn.button('loading')
                setTimeout(function () {
                    btn.button('reset')
                }, 2000)
            });

            $('#id-button-borders').attr('checked', 'checked').on('click', function () {
                $('#default-buttons .btn').toggleClass('no-border');
            });
        })
    });
</script>