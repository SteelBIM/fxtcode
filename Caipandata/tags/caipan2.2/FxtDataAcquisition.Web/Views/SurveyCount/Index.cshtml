<div class="page-header" style="display:none">
    <h1>
        Tables
        <small>
            <i class="icon-double-angle-right"></i>
            Static &amp; Dynamic Tables
        </small>
    </h1>
</div>
<!--整块-->
<div class="row">
    <!--整块-->
    <div class="col-xs-12">
        <!--第一个表格-->
        <div class="row" id="databaseCallPanel">
            <div class="col-xs-12">
                <div class="col-xs-6 col-sm-3 diy_col_left" id="topOperate">
                    共<span id="countShow">0</span>条
                </div>
                <div class="col-xs-6 col-sm-9 diy_col_right">
                    @*楼盘名称
                    <input type="text" class="search-query" style="width:20%;" id="txtProjectName">
                    行政区
                    <select id="selectArea">
                        <option value="0">---全市--</option>
                        @foreach (FxtDataAcquisition.Domain.DTO.FxtDataWcfDTO.FxtApi_SYSArea obj in ViewBag.AreaList)
                        {
                            <option value="@obj.AreaId" class="areaId_@obj.AreaId">@obj.AreaName</option>
                        }
                    </select>
                    片区
                    <select id="selectSubArea">
                        <option value="0">请选择</option>
                    </select>*@
                    <select id="selectDepartment" style="width:100px;">
                        <option value="0">小组</option>
                        @foreach (FxtDataAcquisition.Domain.Models.Department obj in ViewBag.DepartmentList)
                        {
                            <option value="@obj.DepartmentId">@obj.DepartmentName</option>
                        }
                    </select>
                    <input type="text" placeholder="查勘人" class="search-query" style="width:100px;" id="selectUserTrueName">
                    &nbsp;
                    <button type="button" class="btn btn-inverse btn-xs diy_search_btn" id="btnSearch">
                        搜索
                        <i class="ace-icon fa fa-search icon-on-right bigger-110"></i>
                    </button>
                </div>
            </div>
            <div class="col-xs-12">
                <div class="table-responsive">
                    <table id="sample-table-1" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th class="center">
                                    <label id="cbAllPanel">
                                        <input type="checkbox" class="ace" id="cbAll">
                                        <span class="lbl"></span>
                                    </label>
                                </th>
                                <th>查勘人</th>
                                <th>待查勘</th>
                                <th>查勘中</th>
                                <th>已查勘</th>
                                <th>待审批</th>
                                <th>审批已通过</th>
                                <th>已入库</th>
                                <th>已入库楼栋</th>
                            </tr>
                        </thead>
                        <tbody id="databaseCallRowList">
                            <tr id="databaseCallRow" style="display:none;">
                                <td class="center" width="50">
                                    <label class="cbPanel">
                                        <input type="checkbox" class="ace cb_select">
                                        <span class="lbl"></span>
                                    </label>
                                </td>
                                <td width="100">
                                    <span class="txt_surveyusertruename" data-statusid="">查勘人</span>
                                </td>
                                <td width="100">
                                    <span class="txt_tosurveycount" data-statusid="">待查勘</span>
                                </td>
                                <td width="100">
                                    <span class="txt_inthesurveycount" data-statusid="">查勘中</span>
                                </td>
                                <td width="100">
                                    <span class="txt_havesurveycount" data-statusid="">已查勘</span>
                                </td>
                                <td width="100">
                                    <span class="txt_pendingapprovalcount" data-statusid="">待审批</span>
                                </td>
                                <td width="100">
                                    <span class="txt_passedapprovalcount" data-statusid="">审批已通过</span>
                                </td>
                                <td width="100">
                                    <span class="txt_alreadystoragecount" data-statusid="">已入库</span>
                                </td>
                                <td width="100">
                                    <span class="txt_alreadystoragebuildingcount" data-statusid="">已入库楼栋</span>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div><!-- /.table-responsive -->
            </div><!-- /span -->
            <div class="col-xs-12">
                <input type="hidden" value="" id="hdDatabaseCallCount" />
                <ul id="example" data-count=""></ul>
            </div>
        </div>

    </div>
</div>
