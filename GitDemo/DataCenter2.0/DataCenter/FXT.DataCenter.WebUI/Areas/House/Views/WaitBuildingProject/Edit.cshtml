@{
    Layout = "~/Views/Shared/_Layout.Edit.cshtml";
}
@section PageSpecificJavascriptIncludes{
    <script type="text/javascript">
        $(document).ready(function() {
            $("#btnSubmit").unbind();
            $("#btnSubmit").click(function () {
                var projectName = $.trim($("#WaitProjectName").val());

                if (projectName == "") {
                    alert("楼盘名称不能为空");
                    return false;
                }

                $.get('@Url.Action("IsExist")', { waitProjectName: projectName }, function (data) {
                    if (data) {
                        $("#mainForm").submit();
                    } else {
                        alert("已存在相同待建楼盘！");
                        return false;
                    }

                });

                return false;
            });
        });
    </script>
}
@section MainContent{
    <div class="portlet-body form-horizontal form-bordered form-row-stripped">
        <div class="row-fluid">
            <div class="control-group">
                <label class="control-label">
                    楼盘名称：</label>
                <div class="controls">
                    @Html.Hidden("WaitProjectId",ViewBag.WaitProjectId as string)
                    @Html.TextBox("WaitProjectName",ViewBag.WaitProjectName as string)
                </div>
            </div>
        </div>
    </div>
}
