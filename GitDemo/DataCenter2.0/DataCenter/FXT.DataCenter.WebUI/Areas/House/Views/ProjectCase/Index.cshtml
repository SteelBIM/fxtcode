@section Javascript{
    <script type="text/javascript">
        var UrlDeleteSameCase = '@Url.Action("DeleteSameCase")';
        var UrlExport = '@Url.Action("Export")';
        var UrlDelete = '@Url.Action("Delete")';
        var UrlDeleteAll = '@Url.Action("DeleteAll")';
    </script>
    <script type="text/javascript">
        $(document).ready(function () {
            var date = new Date();
            if ($("#casedateStart").val() == "") {
                var startdate = new Date();
                startdate.setMonth(startdate.getMonth() - 6);
                var month = startdate.getMonth() + 1;
                var day = startdate.getDate();
                if (month < 10) {
                    month = "0" + month;
                }
                if (day < 10) {
                    day = "0" + day;
                }
                $("#casedateStart").val(startdate.getFullYear() + "-" + month + "-" + day);
            }
            if ($("#casedateEnd").val() == "") {
                var month = date.getMonth() + 1;
                var day = date.getDate();
                if (month < 10) {
                    month = "0" + month;
                }
                if (day < 10) {
                    day = "0" + day;
                }
                $("#casedateEnd").val(date.getFullYear() + "-" + month + "-" + day);
            }

            //一键删除
            $("#deleteAll").unbind();
            $("#deleteAll").click(function () {
                var caseDateFrom = $.trim($("#casedateStart").val());
                var caseDateTo = $.trim($("#casedateEnd").val());

                if (caseDateFrom == "" || caseDateTo == "") {
                    alert("案例时间不能为空");
                    return false;
                }
                var arrayDate = caseDateFrom.split('-');
                var maxCaseDate = Number(arrayDate[0]) + 1 + arrayDate[1] + arrayDate[2];
                if (caseDateTo > maxCaseDate) {
                    alert("案例时间跨度不能大于一年！");
                    return false;
                }
                if (confirm("是否确定删除？")) {
                    var areaid = $("#areaid").val();
                    var casedateStart = $("#casedateStart").val();
                    var casedateEnd = $("#casedateEnd").val();
                    var caseTypeCode = $("#caseTypeCode").val();
                    var buildingAreaFrom = $.trim($("#buildingAreaFrom").val());
                    var buildingAreaTo = $.trim($("#buildingAreaTo").val());
                    var purposeCode = $("#purposeCode").val();
                    var unitPriceFrom = $.trim($("#unitPriceFrom").val());
                    var unitPriceTo = $.trim($("#unitPriceTo").val());
                    var key = $("#key").val();
                    var buildingTypeCode = $("#buildingTypeCode").val();

                    $.ajax({
                        type: "POST",
                        url: UrlDeleteAll,
                        data: { areaid: areaid, casedateStart: casedateStart, casedateEnd: casedateEnd, caseTypeCode: caseTypeCode, buildingAreaFrom: buildingAreaFrom, buildingAreaTo: buildingAreaTo, purposeCode: purposeCode, unitPriceFrom: unitPriceFrom, unitPriceTo: unitPriceTo, key: key, buildingTypeCode: buildingTypeCode },
                        traditional: true,
                        success: function (data) {
                            if (data.result) {
                                if (data.msg != "") {
                                    alert(data.msg);
                                }
                                location.reload();
                            } else {
                                alert(data.msg);
                            }
                        }
                    });
                }
            });
        });

    </script>
    <script src= '@Url.Content("~/Areas/House/Scripts/ProjectCase.js?a=1")' type="text/javascript"></script>
    @{Html.RegisterMvcPagerScriptResource();}
}
