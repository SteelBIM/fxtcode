@using Webdiyer.WebControls.Mvc
@using FXT.DataCenter.Domain.Models
@model PagedList<DAT_AvgPrice_Month>
@section StyleSheet{
    <style type="text/css">
        select
        {
            margin: 1px;
            width: 150px;
        }

        #search table tr td
        {
            padding-left: 15px;
        }

    </style>
}
@section Javascript{
    <script type="text/javascript">
        $(document).ready(function() {
            $(".page-sidebar > ul > li > a[href='/House/ProjectSample/']").append("<span class='selected'></span>").parent().addClass("active");

            var date = new Date();
            if ($("#CaseDateFrom").val() == "") {
                var startdate = new Date();
                startdate.setMonth(startdate.getMonth() - 6);
                var month = startdate.getMonth() + 1;
                var day = startdate.getDate();
                if (month < 10) {
                    month = "0" + month;
                }
                $("#CaseDateFrom").val(startdate.getFullYear() + "-" + month + "-01");
            }
            if ($("#CaseDateTo").val() == "") {
                var month = date.getMonth() + 1;
                var day = date.getDate();
                if (month < 10) {
                    month = "0" + month;
                }
                if (day < 10) {
                    day = "0" + day;
                }
                $("#CaseDateTo").val(date.getFullYear() + "-" + month + "-01");
            }

            //改变行政区
            $("#AreaId").change(function() {
                var areaId = $(this).val();
                if (areaId > 0) {
                    document.cookie = "areaId=" + areaId;
                }
               
            });


            //日期控件渲染
            var dates = $("#CaseDateFrom, #CaseDateTo").datepicker({
                format: "yyyy-mm-dd"
            });
            //导出
            $("#btnExport").click(function() {
                var areaid = $("#areaid").val();
                var buildingdate = $("#buildingdate").val();
                var purposecode = $("#purposecode").val();
                var buildingtypecode = $("#buildingtypecode").val();

                window.location.href = '@Url.Action("Export")' + "?areaid=" + areaid + "&buildingdate=" + buildingdate + "&purposecode=" + purposecode + "&buildingtypecode=" + buildingtypecode;
            });

            //删除
            $("#delete").unbind();
            $("#delete").click(function() {
                var ids = [];
                var checks = $("input[name='ids']:checked");
                if (checks.length == 0) {
                    alert("请选择要删除的数据");
                    return;
                }
                if (confirm("是否确定删除？")) {
                    checks.each(function() {
                        ids.push($(this).val());
                    });
                    $.ajax({
                        type: "POST",
                        url: '@Url.Action("Delete")',
                        data: { ids: ids },
                        traditional: true,
                        success: function(data) {
                            if (data.result) {
                                if (data.msg != "") {
                                    alert(data.msg);
                                }
                                location.reload();
                            } else {
                                alert(data.msg);
                            }
                        }
                    });
                }

            });


        });


    </script>
    @{Html.RegisterMvcPagerScriptResource();}
}
