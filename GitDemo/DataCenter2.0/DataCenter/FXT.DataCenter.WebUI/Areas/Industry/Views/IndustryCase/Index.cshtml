@section Javascript{
    <script type="text/javascript">
        var UrlDeleteSameCase = '@Url.Action("DeleteSameCase")';
        var UrlExport = '@Url.Action("Export")';
        var UrlDelete = '@Url.Action("Delete")';

        function caseTypeChange(i) {
            $.post('@Url.Action("GetCaseTypeCodeList")', { caseType: i }, function (data) {
                $("#CaseTypeCode").html("");
                $.each(data, function (i, item) {
                    $("#CaseTypeCode").append($("<option></option>").val(item.Value).html(item.Text));
                });
            });
        }

        $(document).ready(function () {
            $(".page-sidebar>ul>li>a[href='/Industry/IndustryCase/']").append("<span class='selected'></span>").parent().addClass("active");
            //日期控件渲染
            $("#CaseDateStart, #CaseDateEnd").datepicker({ format: 'yyyy-mm-dd' });

            $('input:radio[name=CaseType]').filter('[value="@ViewBag.CaseType"]').prop('checked', true);
            $.uniform.update();

            //checkbox联动全选
            $("input[name=ids]").bind("click", function () {
                var flag = true;
                $("input[name=ids]").each(function () {
                    flag = flag && $(this).prop("checked");
                });
                $("#checkall").prop("checked", flag);
                $.uniform.update();
            });

            //查询
            $("#btnRetrive").click(function () {
                caseTypeChange($(":radio:checked").val());
                var caseDateFrom = $.trim($("#CaseDateStart").val());
                var caseDateTo = $.trim($("#CaseDateEnd").val());

                if (caseDateFrom == "" || caseDateTo == "") {
                    alert("案例日期不能为空");
                    return false;
                }
                var arrayDate = caseDateFrom.split('-');
                var maxCaseDate = Number(arrayDate[0]) + 1 + arrayDate[1] + arrayDate[2];
                if (caseDateTo > maxCaseDate) {
                    alert("案例日期跨度不能大于一年！");
                    return false;
                }
                if (caseDateFrom > caseDateTo) {
                    alert("案例日期开始时间不能大于截止时间！");
                    return false;
                }

                var BuildingAreaFrom = $.trim($("#BuildingAreaFrom").val()).Value;
                var BuildingAreaTo = $.trim($("#BuildingAreaTo").val()).Value;
                if (BuildingAreaFrom > BuildingAreaTo) {
                    alert("建筑面积开始范围不能大于截止范围！");
                    return false;
                }

                var unitPriceFrom = $.trim($("#UnitPriceFrom").val()).Value;
                var unitPriceTo = $.trim($("#UnitPriceTo").val()).Value;
                if (unitPriceFrom > unitPriceTo) {
                    alert("单价开始范围不能大于截止范围！");
                    return false;
                }

                $("#search").attr("action", "@Url.Action("Index")");
            });

            //删除
            $("#delete").unbind();
            $("#delete").click(function () {
                var ids = [];
                var checks = $("input[name='ids']:checked");
                if (checks.length == 0) {
                    alert("请选择要删除的数据");
                    return;
                }
                if (confirm("是否确定删除？")) {
                    checks.each(function () {
                        ids.push($(this).val());
                    });
                    $.ajax({
                        type: "POST",
                        url: UrlDelete,
                        data: { ids: ids },
                        traditional: true,
                        success: function (data) {
                            if (data.result) {
                                if (data.msg != "") {
                                    alert(data.msg);
                                }
                                location.reload();
                            } else {
                                alert(data.msg);
                            }
                        }
                    });
                }
            });

            //导出
            $("#btnExport").click(function () {
                var caseDateStart = $.trim($("#CaseDateStart").val());
                var caseDateEnd = $.trim($("#CaseDateEnd").val());

                if (caseDateStart == "" || caseDateEnd == "") {
                    alert("案例时间不能为空");
                    return;
                }
                var arrayDate = caseDateStart.split('-');
                var maxCaseDate = Number(arrayDate[0]) + 1 + arrayDate[1] + arrayDate[2];
                if (caseDateEnd > maxCaseDate) {
                    alert("案例时间跨度不能大于一年！");
                    return;
                }
                if (caseDateStart > caseDateEnd) {
                    alert("案例日期开始时间不能大于截止时间！");
                    return false;
                }

                var BuildingAreaFrom = $.trim($("#BuildingAreaFrom").val()).Value;
                var BuildingAreaTo = $.trim($("#BuildingAreaTo").val()).Value;
                if (BuildingAreaFrom > BuildingAreaTo) {
                    alert("建筑面积开始范围不能大于截止范围！");
                    return false;
                }

                var unitPriceFrom = $.trim($("#UnitPriceFrom").val()).Value;
                var unitPriceTo = $.trim($("#UnitPriceTo").val()).Value;
                if (unitPriceFrom > unitPriceTo) {
                    alert("单价开始范围不能大于截止范围！");
                    return false;
                }
                $("#search").attr("action", "@Url.Action("Export")").submit();
            });

            //删除重复案例
            $("#btnDeleteSameCase").click(function () {

                $(this).tb_windowAddFooter({
                    sender1: "sender1", //第一个按钮的ID
                    name1: "提 交", //第一个按钮的名称
                    sender2: "sender2", //第二个按钮的ID
                    name2: "取 消", //第二个按钮的名称
                    sen1func: function () { //第一个按钮的功能函数
                        //$("#deleteSameCase").submit();
                        if (confirm("是否确定删除重复案例？")) {
                            $("#sameCaseForm").submit();
                        }

                        return false;
                    }
                });
            });
        });
    </script>

    @{Html.RegisterMvcPagerScriptResource();}
}
