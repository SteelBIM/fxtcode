@using FXT.DataCenter.Domain.Models
@model DatWeightHouse
@{
    Layout = "~/Views/Shared/_Layout.Edit.cshtml";
}
@section PageSpecificStyleSheetIncludes{
    <style type="text/css">
        .required {
            color: red;
        }
    </style>

    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/Scripts/autocomplete/jquery.autocomplete.css")" />
}
@section PageSpecificJavascriptIncludes{
    <script src="@Url.Content("~/Content/Scripts/autocomplete/jquery.autocomplete.min.js")" type="text/javascript"></script>
}
@section MainContent{

    <div class="portlet-body form-horizontal form-bordered form-row-stripped">
        <div class="row-fluid">
            <div class="control-group">
                <label class="control-label">
                    房号:</label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.HouseName, new { @readonly = "true" })
                    @if (Model != null)
                    {
                        @Html.HiddenFor(m => m.Id)
                        @Html.HiddenFor(m => m.CityId)
                        @Html.HiddenFor(m => m.FxtCompanyId)
                        @Html.HiddenFor(m => m.HouseId)
                    }
                    <input type="hidden" name ="projectId" value="@ViewBag.projectId" />
                    <input type="hidden" name ="buildingId" value="@ViewBag.buildingId" />
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">
                    房号系数：</label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.Weight)
                </div>
            </div>
        </div>
    </div>
}
