@using Webdiyer.WebControls.Mvc
@using FXT.DataCenter.Domain.Models
@model PagedList<DAT_Company>
@section StyleSheet{

}
@section  Javascript{
    <script type="text/javascript">
        var UrlExport = '@Url.Action("Export")';
        $(document).ready(function () {
            //删除
            $("#delete").unbind();
            $("#delete").click(function () {
                var ids = [];
                var checks = $("input[name='ids']:checked");
                if (checks.length == 0) {
                    alert("请选择要删除的数据");
                    return;
                }
                if (confirm("是否确定删除？")) {
                    checks.each(function () {
                        ids.push($(this).val());
                    });
                    $.ajax({
                        type: "POST",
                        url: '@Url.Action("Delete")',
                        data: { ids: ids },
                        traditional: true,
                        success: function (data) {
                            if (data.result) {
                                if (data.msg != "") {
                                    alert(data.msg);
                                }
                                location.reload();
                            } else {
                                alert(data.msg);
                            }
                        }
                    });
                }

            });

            $("#btnExport").click(function () {
                window.location.href = '@Url.Action("Export")' + "?name=" + name;

            });

        });
    </script>
    @{Html.RegisterMvcPagerScriptResource();}
}
<div class="row-fluid">
    <div class="span4" style="width: 36%;">
        <a class="btn blue thickbox" title='添加公司信息' href="@Url.Action("Create")?TB_iframe=true&height=500&width=450">
            <i class="icon-plus icon-white"></i>新增</a> <a class="btn red" id="delete" href="javascript:;">
                <i class="icon-trash icon-white"></i>删除</a> <a class="btn thickbox" title="Excel导入" id="btnImport" href="@Url.Action("UploadFile")?TB_iframe=true&height=280&width=480">导 入</a> <a class="btn" id="btnExport" href="javascript:;">导 出</a>
        <a class="btn thickbox" title='统计' href="@Url.Action("Statistics")?TB_iframe=true&height=200&width=450">统 计</a>
    </div>
    <div class="span8" style="width: 60%;">
        @using (Html.BeginForm("Index", "Company", FormMethod.Get))
        { 
            <div class="dataTables_filter">
                <label>
                    <button type="submit" class="btn">
                        搜索 <i class="icon-search"></i>
                    </button>
                </label>
                <label>
                    <span>公司名称：</span>
                    @Html.TextBox("Name", null, new { @class = "m-wrap small" })
                </label>
            </div>
        }
    </div>
</div>

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th style="width: 8px;">
                <input type="checkbox" id="checkall" class="group-checkable" />
            </th>
            <th>中文名称
            </th>
            <th>公司类型
            </th>
            <th>地址
            </th>
            <th>电话
            </th>
            <th>操作
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var m in Model)
            {
                var chValue = m.FxtCompanyId + "#" + m.CompanyId;
            <tr>
                <td>
                    <input type="checkbox" class="checkboxes" name='ids' value='@chValue' />
                </td>
                <td>
                    @m.ChineseName
                </td>
                <td>
                    @m.CompanyTypeName
                </td>
                <td>
                    @m.Address
                </td>
                <td>
                    @m.Telephone
                </td>
                <td>
                    <a class="btn mini purple thickbox" title='编辑公司'  href="@Url.Action("Edit", new { id = chValue })?TB_iframe=true&height=500&width=450">
                        <i class="icon-edit"></i>编 辑</a>

                </td>
            </tr>
            }
        }
    </tbody>
</table>

<div class="pager">
   @{
        var totalPageCount = Model == null ? 0 : Model.TotalPageCount;
        var totalItemCount = Model == null ? 0 : Model.TotalItemCount;
        var currentPageIndex = Model == null ? 0 : Model.CurrentPageIndex;
    }
    <div>共 @totalPageCount 页 @totalItemCount 条记录,当前为第 @currentPageIndex 页</div>
    @if (Model!=null&&Model.Any())
    {
        @Html.Pager(Model, new PagerOptions { AutoHide = false, ShowPageIndexBox = true, PageIndexBoxType = PageIndexBoxType.TextBox })
    }
</div>





