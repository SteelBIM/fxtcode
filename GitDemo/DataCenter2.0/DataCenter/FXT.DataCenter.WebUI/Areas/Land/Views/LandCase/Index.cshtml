@section Javascript{
    <script type="text/javascript">
        $(document).ready(function() {
            var urlSubArea = '@Url.Action("GetSubArea")';

            $("#dateFrom, #dateTo, #casedateFrom,#casedateTo").datepicker();
            //行政区片区联动
            $("#areaid").change(function() {
                $.post(urlSubArea, { areaid: $("#areaid").val() }, function(data) {
                    $("#subareaid").html("");
                    $.each(data, function(i, item) {
                        $("#subareaid").append($("<option></option>").val(item.Value).html(item.Text));
                    });
                });
            });

            //导出
            $("#btnExport").click(function() {
                $("#search").attr("action", "/Land/LandCase/Export");

            });

            //清除
            //$("#btnClear").click(function() {
            //    $("#areaid").val(-1);
            //    $("#casedate").val("");
            //    $("#landno").val("");
            //    $("#subareaid").val(-1);
            //    $("#seller").val("");
            //    $("#winner").val("");
            //    $("#bargaintypecode").val(-1);
            //    $("#dateFrom").val("");
            //    $("#dateTo").val("");
            //    $("#landpurposecode").val(-1);
            //});

            //删除
            $("#delete").unbind();
            $("#delete").click(function() {
                var ids = [];
                var checks = $("input[name='ids']:checked");
                if (checks.length == 0) {
                    alert("请选择要删除的数据");
                    return;
                }
                if (confirm("是否确定删除？")) {
                    checks.each(function() {
                        ids.push($(this).val());
                    });
                    $.ajax({
                        type: "POST",
                        url: "@Url.Action("Delete")",
                        data: { ids: ids },
                        traditional: true,
                        success: function(data) {
                            if (data.result) {
                                if (data.msg != "") {
                                    alert(data.msg);
                                }
                                location.reload();
                            } else {
                                alert(data.msg);
                            }
                        }
                    });
                }

            });
        });

    </script>
    @{Html.RegisterMvcPagerScriptResource();}
}
