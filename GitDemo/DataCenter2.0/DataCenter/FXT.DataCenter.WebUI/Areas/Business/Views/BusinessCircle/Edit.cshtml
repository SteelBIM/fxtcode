@model FXT.DataCenter.Domain.Models.SYS_SubArea_Biz
@{
    ViewBag.Title = "商业基础数据";
}
@section StyleSheet{

    <style type="text/css">
        #tbInputCon
        {
            margin-top: 10px;
            margin-left: 30px;
            width: 95%;
            font-size: 14px;
            font-weight: normal;
            line-height: 20px;
            font-family: "Microsoft Yahei", "微软雅黑", "宋体", "Simsun", "Open Sans";
        }

        .required
        {
            color: red;
        }

        /*.GetCoordinate, .MapCallout
        {
            display: none;
        }*/

        .xubox_layer
        {
            top: 50px !important;
        }

    </style>
}
@section Javascript{
    <script src="@Url.Content("~/Content/Scripts/cityBind/city.js")" type="text/javascript"></script>
    <script type="text/javascript" src="http://api.map.baidu.com/api?v=1.4"></script>
    <script src="@Url.Content("~/Content/layer-v1.7.1/layer/layer.min.js")" type="text/javascript"></script>
    <script type="text/javascript" src="@Url.Content("~/Areas/Business/Scripts/BusinessCircle.js")"></script>
    <script type="text/javascript">
        
        var cityX = "@ViewBag.CityX";
        var cityY = "@ViewBag.CityY";

        //面包屑导航
        var locationHref = window.location.href;

        $("#navigation .breadcrumb li:eq(1)").remove();
        $("#navigation .breadcrumb li:eq(2)").remove();
        var html = " <li><span><a href=\"/Business/BusinessCircle/Index\">商业基础数据</a></span> <i class=\"icon-angle-right\"></i></li>";

        if ('@Model' == "") {
            html += "<li><span>新增</span></li>";
        } else {
            html += "<li><span>编辑</span></li>";
        }

        $("ul.breadcrumb").append(html);


        //确定
        $("#btnSave").bind("click", function () {
            var areaId = $("#AreaId").val();
            var subAreaName = $.trim($("#SubAreaName").val());
            var $subAreaId = $("#SubAreaId");
            var subAreaId = $subAreaId.length == 0 ? "-1" : $subAreaId.val();

            if (subAreaName == "") {
                $("#msgForSubAreaName").text("*必填");
                return;
            }
            if (areaId == -1) {
                $("#msgForAreaId").text("*必选");
                return;
            }

            $.post('@Url.Action("IsExistSubAreaBiz")', { areaId: areaId,subAreaId:subAreaId,subAreaName: subAreaName }, function (data) {
                if (data) {
                    alert("该商圈已存在");
                } else {
                    $("#mainForm").submit();
                }
            });

        });
      
    </script>
}

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "mainForm" }))
{
    <table id="tbInputCon" class="tbInputCon">
        <tr>
            <td>
                <span class="required">*</span> 商圈名称:
            </td>
            <td>
                @if (Model != null)
                {
                    @Html.HiddenFor(m => m.SubAreaId)
                }
                @Html.TextBoxFor(m => m.SubAreaName)
                <span style="color: red;" id="msgForSubAreaName"></span>
            </td>
            <td>
                <span class="required">*</span> 行政区：
            </td>
            <td>
                @Html.DropDownList("AreaId")
                <span style="color: red;" id="msgForAreaId"></span>
            </td>
        </tr>
        <tr>
            <td>环线:
            </td>
            <td>
                @Html.TextBoxFor(m => m.AreaLine)
            </td>
            <td>商圈描述：
            </td>
            <td>
                @Html.TextBoxFor(m => m.Details)
            </td>
        </tr>
        <tr>
            <td>商圈等级:
            </td>
            <td>
                @Html.DropDownList("TypeCode")
            </td>
            <td colspan="2">
                @Html.HiddenFor(m => m.LngOrLat)
            </td>
        </tr>
        <tr>
            <td>X坐标:
            </td>
            <td>@Html.TextBoxFor(m => m.x, new { @readonly = "readonly" })
            </td>
            <td>Y坐标:
            </td>
            <td>
                @Html.TextBoxFor(m => m.y, new { @readonly = "readonly" })
                <a href="javascript:void(0)" id="GetCoordinate" @*onclick="GetLngLat()"*@>拾取坐标</a>
                <a href="javascript:void(0)" id="MapCallout" @*onclick="MapLine()"*@>地图标注</a>
            </td>
        </tr>
        <tr>
            <td colspan="4" style="padding-top: 10px;">
                <a id="btnSave" class="btn blue" title='确定'><i class="icon-ok"></i>确定</a>
                @if (Model != null)
                {
                    <a class="btn " target="_blank" href="@Url.Action("Index", "BusinessStreet", new { SubAreaId = Model.SubAreaId, isExternalRequest = true })" ><i class=" icon-share-alt"></i>商业街</a>
                }
            </td>
        </tr>
    </table>
}

