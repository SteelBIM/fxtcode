        {
            foreach (var m in Model)
            {
                var chValue = m.FxtCompanyId + "#" + m.HouseTenantId;
            <tr>
                <td>
                    <input type="checkbox" class="checkboxes" name='ids' value='@chValue' />
                </td>
                <td>
                    <a href="@Url.Action("Edit", new { id = chValue })">@m.BizHouseName </a>
                </td>
                <td>
                    @m.BrandName
                </td>
                <td>
                    @m.BuildingArea
                </td>
                <td>
                    @m.Rent
                </td>
                <td>
                    @m.RentTypeName
                </td>
                <td>
                    <a class="btn mini purple" title='编辑商铺' href="@Url.Action("Edit", new { id = chValue })">
                        <i class="icon-edit"></i>编辑 </a>
