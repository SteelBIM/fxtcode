@using Webdiyer.WebControls.Mvc
@model PagedList<FXT.DataCenter.Entity.DTO.ProjectCase_WorkLoad>
@using (Html.BeginForm("WorkLoad", "ProjectCase"))
{ 
           
    <table class="tbsta">
        <tr>
            <td>案例上传时间：
            </td>
            <td>
                @Html.TextBox("caseUpLoadtimeFrom", Request["caseUpLoadtimeFrom"], new { @class = "m-wrap small" })
            </td>
            <td>&nbsp;到：
            </td>
            <td>
                @Html.TextBox("caseUpLoadtimeTo", Request["caseUpLoadtimeTo"], new { @class = "m-wrap small" })
            </td>
            <td>&nbsp;&nbsp;&nbsp;
                            <button id="btnQuery" class="btn">
                                查 询
                            </button>
            </td>
        </tr>
    </table>
}
@if (Model != null && Model.Any())
{
    <table class="table table-striped table-hover " style="margin-top: 20px;">
        <thead>
            <tr>
                <th>姓名
                </th>
                <th>案例上传条数
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.UserName
                    </td>
                    <td>
                        @item.Count
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="pager">
        <div>共 @Model.TotalPageCount 页 @Model.TotalItemCount 条记录，当前为第 @Model.CurrentPageIndex 页</div>
        @Ajax.Pager(
Model, new PagerOptions { AutoHide = false, ShowPageIndexBox = true, PageIndexBoxType = PageIndexBoxType.TextBox }, new MvcAjaxOptions { UpdateTargetId = "workLoad" })
    </div>
}


