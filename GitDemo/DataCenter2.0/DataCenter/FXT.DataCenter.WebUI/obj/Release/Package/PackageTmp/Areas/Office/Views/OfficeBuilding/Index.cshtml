@section Javascript{
    <script type="text/javascript">

        var UrlExport = '@Url.Action("Export")';
        var UrlDelete = '@Url.Action("Delete")';

        $(document).ready(function () {

            //面包屑导航
            $("#navigation .breadcrumb li:eq(1)").remove();
            $("#navigation .breadcrumb li:eq(2)").remove();
            var html = " <li><span><a href='@Url.Action("Index", "OfficeProject")'>办公基础数据</a></span> <i class=\"icon-angle-right\"></i></li>";
            html += " <li><span>办公楼栋</span><li>";
            $("ul.breadcrumb").append(html);

            //日期控件渲染
            $("#CaseDateStart, #CaseDateEnd").datepicker({ format: 'yyyy-mm-dd' });

            //checkbox联动全选
            $("input[name=ids]").bind("click", function () {
                var flag = true;
                $("input[name=ids]").each(function () {
                    flag = flag && $(this).prop("checked");
                });
                $("#checkall").prop("checked", flag);
                $.uniform.update();
            });

            //删除
            $("#delete").unbind();
            $("#delete").click(function () {
                var ids = [];
                var checks = $("input[name='ids']:checked");
                if (checks.length == 0) {
                    alert("请选择要删除的数据");
                    return;
                }
                if (confirm("是否确定删除？")) {
                    checks.each(function () {
                        ids.push($(this).val());
                    });
                    $.ajax({
                        type: "POST",
                        url: UrlDelete,
                        data: { ids: ids },
                        traditional: true,
                        success: function (data) {
                            if (data.result) {
                                if (data.msg != "") {
                                    alert(data.msg);
                                }
                                location.reload();
                            } else {
                                alert(data.msg);
                            }
                        }
                    });
                }

            });

            //导出
            $("#btnExport").click(function () {

                var projectId = $("#ProjectId").val();
                var buildingName = $("#BuildingName").val();
                var officeType = $("#OfficeType").val();
                var purposeCode = $("#PurposeCode").val();
                var structureCode = $("#StructureCode").val();
                var buildingTypeCode = $.trim($("#BuildingTypeCode").val());
                var rentSaleType = $.trim($("#RentSaleType").val());

                var request = {
                    projectId: projectId,
                    buildingName: buildingName,
                    officeType: officeType,
                    purposeCode: purposeCode,
                    structureCode: structureCode,
                    buildingTypeCode: buildingTypeCode,
                    rentSaleType: rentSaleType
                };

                var datBuildingOffice = JSON.stringify(request);
                location.href = UrlExport + "?datBuildingOffice=" + datBuildingOffice;
            });
        });

        function view(obj, buildingId) {
            $.get('@Url.Action("OfficeHouseCount")', { buildingId: buildingId }, function (data) {
                $(obj).html('<i class="icon-eye-close"></i>&nbsp;' + data);
                $(obj).attr("href", "/Office/OfficeHouse/Index?buildingId=" + buildingId + "&projectId=" + '@ViewBag.ProjectId');
            });
        }
    </script>

    @{Html.RegisterMvcPagerScriptResource();}
}
