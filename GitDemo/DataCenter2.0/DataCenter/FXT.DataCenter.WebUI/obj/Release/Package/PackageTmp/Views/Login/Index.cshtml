@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>云估价数据中心</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <meta content="" name="description" />
    <meta content="" name="author" />
    <link href="@Url.Content("~/Content/assets/bootstrap/css/bootstrap.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/assets/css/metro.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/assets/font-awesome/css/font-awesome.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/assets/css/style.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/assets/css/style_responsive.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/assets/css/style_default.css")" rel="stylesheet" id="style_color" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/assets/uniform/css/uniform.default.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("/content/styles/admin.main.css")" />
    <style type="text/css">
        .checkCss
        {
            float: right;
        }

        /*.login .content .form-actions .checkbox
        {
            margin-left: 0;
            padding-left: 0;
        }

        .checkbox
        {
            min-height: 20px;
            margin-bottom: 10px;
            vertical-align: middle;
        }*/
    </style>
    <script type="text/javascript">
        if (self.frameElement != null) {
            if (self.frameElement.tagName == "IFRAME") {
                self.parent.location = "/Login/Index";
            }
        }

        var localUrl = window.location.href;
        if (localUrl.indexOf("/login/index") < 0) {
            window.location = '/login/index';
        }
    </script>
</head>
<!-- END HEAD -->
<!-- BEGIN BODY -->
<body class="login">
    <!-- BEGIN LOGO -->
    <div class="logo">
        <img src="@Url.Content("~/Content/assets/img/logo-big.png")" alt="" />
    </div>
    <!-- END LOGO -->
    <!-- BEGIN LOGIN -->
    <div class="content">
        <!-- BEGIN LOGIN FORM -->
        @using (Html.BeginForm())
        {
            <h3 class="form-title">请输入你的帐号和密码</h3>
            <div class="alert alert-error hide">
                <button class="close" data-dismiss="alert">
                </button>
                <span>Enter any username and passowrd.</span>
            </div>
            <div class="control-group">
                <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                <label class="control-label visible-ie8 visible-ie9">
                    用户名</label>
                <div class="controls">
                    <div class="input-icon left">
                        <i class="icon-user"></i>
                        @Html.TextBox("username", string.Empty, new { @class = "m-wrap placeholder-no-fix", placeholder = "用户名", data_val_required = "用户名不能为空", data_val = "true" })
                    </div>
                    <span class="help-block">@Html.ValidationMessage("username")</span>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label visible-ie8 visible-ie9">
                    密码</label>
                <div class="controls">
                    <div class="input-icon left">
                        <i class="icon-lock"></i>
                        @Html.Password("password", string.Empty, new { @class = "m-wrap placeholder-no-fix", placeholder = "密码", data_val_required = "密码不能为空", data_val = "true" })
                    </div>
                    <span class="help-block">@Html.ValidationMessage("password")</span>
                </div>
            </div>
            <div class="form-actions">
                <label class="checkbox">
                    <div class="checker">
                        <span>
                           <input id="remember" name="remember" type="hidden" value="false">
                        </span>
                    </div>
                    记住我
                </label>
                <button type="submit" class="btn green pull-right">
                    登录 <i class="m-icon-swapright m-icon-white"></i>
                </button>
                <div>@Html.ValidationMessage("error")
                </div>
            </div>
            <div class="forget-password">
                <h4>忘记密码 ?</h4>
                <p>
                    请联系跟您<a href="javascript:;" class="" id="forget-password">对接的客服</a>
                    提出重设密码的申请.
                </p>
            </div>
        }
        <!-- END LOGIN FORM -->
    </div>
    <!-- END LOGIN -->
    <!-- BEGIN COPYRIGHT -->
    <div class="copyright">
        2015 &copy; 深圳房讯通技术有限公司
    </div>
    <!-- END COPYRIGHT -->
    <!-- BEGIN JAVASCRIPTS -->
    <script type="text/javascript" src="@Url.Content("~/Content/assets/js/jquery-1.8.3.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/assets/bootstrap/js/bootstrap.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/assets/js/jquery.blockui.js")"></script>
    <script type="text/javascript" src="@Url.Content("/content/scripts/jquery.validate.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("/content/scripts/jquery.validate.unobtrusive.min.js")"></script>
    <script>
        $(function () {
            $('.login-form input').keypress(function (e) {
                if (e.which == 13) {
                    if ($('.login-form').validate().form()) {
                        $('.login-form').submit();
                    }
                    return false;
                }
            });

            $(".checker").on("click", function () {

                var $span = $(this).children("span");

                if ($span.hasClass("checked")) {
                    $span.removeClass("checked");
                    $("#remember").val(false);
                } else {
                    $span.addClass("checked");
                    $("#remember").val(true);
                }

            });
        });

    </script>
</body>
<!-- END BODY -->
</html>
