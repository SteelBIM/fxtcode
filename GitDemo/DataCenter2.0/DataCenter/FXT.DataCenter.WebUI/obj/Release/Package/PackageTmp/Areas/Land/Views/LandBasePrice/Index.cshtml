@section Javascript{
    <script type="text/javascript">
        var UrlDelete = '@Url.Action("Delete")';
        $(document).ready(function () {
            //日期控件渲染
            $("#pricedate, #priceenddate").datepicker({ format: 'yyyy-mm-dd' });

            //            $("button[id='btnImport']").bind("click", function () {
            //                $("#span11_btnOKImpot").show();
            //                return false;
            //            });
            //            $("#btnOKImpot").bind("click", function () {
            //                var execl = (/\.xls$|\.xlsx$/i);
            //                if (!execl.test($("#filepath").val())) {
            //                    alert("请你上传xls或者xlsx格式的文件");
            //                    return false;
            //                }
            //                return true;
            //            });
            $("#btnExport").bind("click", function () {
                $("#search").attr("action", "/Land/LandBasePrice/ExcelImport");
            });
            $("#btnAll").bind("click", function () {
                var startdate = $("#pricedate").val(), enddate = $("#priceenddate").val();
                if (startdate != null && enddate != null) {
                    startdate = startdate.replace(/-/g, "/");
                    enddate = enddate.replace(/-/g, "/");
                    var time_start = new Date(startdate);
                    var time_end = new Date(enddate);
                    if (Date.parse(time_start) - Date.parse(time_end) > 0) {
                        alert("土地使用起始日期的范围有误");
                        return false;
                    }
                }
                $("#search").attr("action", "/Land/LandBasePrice/Index");
            });
            //删除
            $("#delete").unbind();
            $("#delete").click(function () {
                var ids = [];
                var checks = $("input[name='ids']:checked");
                if (checks.length == 0) {
                    alert("请选择要删除的数据");
                    return;
                }
                if (confirm("是否确定删除？")) {
                    checks.each(function () {
                        ids.push($(this).val());
                    });
                    $.ajax({
                        type: "POST",
                        url: UrlDelete,
                        data: { ids: ids },
                        traditional: true,
                        success: function (data) {
                            if (data.result) {
                                if (data.msg != "") {
                                    alert(data.msg);
                                }
                                location.reload();
                            } else {
                                alert(data.msg);
                            }
                        }
                    });
                }

            });
            var locationHref = window.location.href;
            if (locationHref.indexOf("Land/LandBasePrice") > 0) {
                $(".page-sidebar ul li:eq(4)").removeClass("active").addClass("active");
                $(".page-sidebar ul li:eq(4)").find("a").empty().append("<i class='icon-calendar'></i><span class='title'>土地基准地价</span><span class='selected'></span>");
            }

        });
    </script>
       @{Html.RegisterMvcPagerScriptResource();}
}
