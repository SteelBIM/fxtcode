@section Javascript{
    <script type="text/javascript">
        $(document).ready(function() {
            $(".page-sidebar > ul > li > a[href='/House/ProjectSample/']").append("<span class='selected'></span>").parent().addClass("active");

            //日期控件渲染
            var dates = $("#buildingdate").datepicker({
                format: "yyyy-mm-dd"
            });

            $("#btnExport").click(function() {
                var areaid = $("#areaid").val();
                var buildingdate = $("#buildingdate").val();
                var purposecode = $("#purposecode").val();
                var buildingtypecode = $("#buildingtypecode").val();

                window.location.href = '@Url.Action("Export")' + "?areaid=" + areaid + "&buildingdate=" + buildingdate + "&purposecode=" + purposecode + "&buildingtypecode=" + buildingtypecode;
            });

            //删除
            $("#delete").unbind();
            $("#delete").click(function() {
                var ids = [];
                var checks = $("input[name='ids']:checked");
                if (checks.length == 0) {
                    alert("请选择要删除的数据");
                    return;
                }
                if (confirm("是否确定删除？")) {
                    checks.each(function() {
                        ids.push($(this).val());
                    });
                    $.ajax({
                        type: "POST",
                        url: '@Url.Action("Delete")',
                        data: { ids: ids },
                        traditional: true,
                        success: function(data) {
                            if (data.result) {
                                if (data.msg != "") {
                                    alert(data.msg);
                                }
                                location.reload();
                            } else {
                                alert(data.msg);
                            }
                        }
                    });
                }

            });


        });

        function view(obj,projectId,projectName,fxtCompanyId) {
            $.get('@Url.Action("RelationProject")', { projectId: projectId }, function (data) {
                $(obj).html('<i class="icon-eye-close"></i>&nbsp;' + data);
                $(obj).attr("href", "/House/ProjectSample/Detail?companyId=" + fxtCompanyId + "&projectId=" + projectId + "&projectName=" + projectName);
            });
        }
    </script>
    @{Html.RegisterMvcPagerScriptResource();}
}
