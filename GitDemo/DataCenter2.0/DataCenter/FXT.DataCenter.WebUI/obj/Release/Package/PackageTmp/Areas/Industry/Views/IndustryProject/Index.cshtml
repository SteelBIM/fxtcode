            display: none;
        }
    </style>
}
@section Javascript{
    <script type="text/javascript">
        var UrlExport = '@Url.Action("Export")';

        $(document).ready(function () {
            //面包屑导航
            $("#navigation .breadcrumb li:eq(1)").remove();
            $("#navigation .breadcrumb li:eq(2)").remove();
            var html = " <li><span><a href='/Industry/IndustryProject/Index'>工业基础数据</a></span></li>";
            $("ul.breadcrumb").append(html);

            //行政区片区联动
            $("#AreaId").change(function () {
                PostSubAreaId();
            });

            //checkbox联动全选
            $("input[name=ids]").bind("click", function () {
                var flag = true;
                $("input[name=ids]").each(function () {
                    flag = flag && $(this).prop("checked");
                });
                $("#checkall").prop("checked", flag);
                $.uniform.update();
            });

            //导出
            $("#btnExport").bind("click", function () {
                $("#search").attr("action", "/Industry/IndustryProject/Export");
            });

            //批量导入
            $("#btnBatchImport").on("click", function () {
                var $import = $(".import");
                var length = $import.length;
                if (length > 0) {
                    $import.removeClass("import").addClass("importFlag");
                } else {
                    $(".importFlag").removeClass("importFlag").addClass("import");
                }
            });
            //自定义导出
            $("#btnSelfDefineExport").on("click", function () {
                var $import = $(".selfDefineExport");
                var length = $import.length;
                if (length > 0) {
                    $import.removeClass("selfDefineExport").addClass("selfDefineExportFlag");
                } else {
                    $(".selfDefineExportFlag").removeClass("selfDefineExportFlag").addClass("selfDefineExport");
                }
            });

            //查询
            $("#btnRetrive").bind("click", function () {
                $("#search").attr("action", "/Industry/IndustryProject/Index");
                PostSubAreaId();
            });

            //删除
            $("#delete").unbind();
            $("#delete").click(function () {
                var ids = [];
                var checks = $("input[name='ids']:checked");
                if (checks.length == 0) {
                    alert("请选择要删除的数据");
                    return;
                }
                if (confirm("是否确定删除？")) {
                    checks.each(function () {
                        ids.push($(this).val());
                    });
                    $.ajax({
                        type: "POST",
                        url: "@Url.Action("Delete")",
                        data: { ids: ids },
                        traditional: true,
                        success: function (data) {
                            if (data.result) {
                                if (data.msg != "") {
                                    alert(data.msg);
                                }
                                location.reload();
                            } else {
                                alert(data.msg);
                            }
                        }
                    });
                }
            });
        });

        function PostSubAreaId() {
            $.post('@Url.Action("GetSubAreaName")', { areaId: $("#AreaId").val() }, function (data) {
                $("#SubAreaId").html("");
                $.each(data, function (i, item) {
                    $("#SubAreaId").append($("<option></option>").val(item.Value).html(item.Text));
                });
            });
        }

        function view(obj, projectId) {
            $.get('@Url.Action("IndustryBuildingCount")', { projectId: projectId }, function (data) {
                $(obj).html('<i class="icon-eye-close"></i>&nbsp;' + data);
                $(obj).attr("href", "/Industry/IndustryBuilding/Index?projectId=" + projectId);
            });
        }
    </script>
    @{Html.RegisterMvcPagerScriptResource();}
}

