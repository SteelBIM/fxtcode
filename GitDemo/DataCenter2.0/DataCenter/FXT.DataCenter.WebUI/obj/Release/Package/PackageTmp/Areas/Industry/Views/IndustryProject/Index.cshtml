@using FXT.DataCenter.Domain.Models
@using Webdiyer.WebControls.Mvc
@helper Truncate(string input, int length)
{
    if (string.IsNullOrEmpty(input) || input.Length <= length)
    {
    @input
    }
    else
    {
    @input.Substring(0, length)<text>...</text>
    }
}
