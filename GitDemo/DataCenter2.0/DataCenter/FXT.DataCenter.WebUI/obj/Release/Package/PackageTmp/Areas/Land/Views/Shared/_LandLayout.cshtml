@helper DisplayUrl(int code)
{
    var firstOrDefault = new Menu().GetMenuByTypeCode(code).FirstOrDefault();
    if (firstOrDefault == null)
    {
        return;
    }
    var url = firstOrDefault.URL;
    @url
}

