@using FXT.DataCenter.Domain.Models;
@using FXT.DataCenter.Web;
@model Webdiyer.WebControls.Mvc.PagedList<DAT_Land>   
@{
    ViewBag.Title = "土地基础信息统计";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row-fluid">
    <div class="span4">
        <div>
            <a class="btn red" id="delete" href="javascript:void(0);"><i class="icon-trash icon-white">
            </i>删除</a> <a class="btn blue thickbox" title='添加土地基础信息' href="@Url.Action("Edity", new { id = 0 })?TB_iframe=true&height=600&width=800">
                <i class="icon-plus icon-white"></i>新增</a>
        </div>
    </div>
    <div class="span8">
        @using (Html.BeginForm(null, null, null, FormMethod.Get, new { id = "search" }))
        { 
            <div class="dataTables_filter">
                <label>
                    <button type="submit" class="btn">
                        搜索 <i class="icon-search"></i>
                    </button>
                </label>
                <label>
                    <span>土地名称：</span>
                    @Html.TextBox("landName", null, new { @class = "m-wrap small" })
                </label>
            </div>
        }
    </div>
</div>
@using (Html.BeginForm("Delete", "Land", FormMethod.Post, new { id = "mainForm" }))
{
    @*<div style="overflow-x:scroll;">*@
    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th style="width: 8px;"><input type="checkbox" id="checkall" class="group-checkable" /></th>
                <th width="400">评估机构</th>
                <th width="200">城市</th>
                <th width="200">行政区</th>
                <th width="200">片区</th>
               @* <th width="200">宗地号</th>
                <th width="400">使用证号</th>
                <th width="400">土地名称</th>
                <th width="200">位置</th>
                <th width="600">使用权类型</th>
                <th width="800">使用起始日期</th>
                <th width="800">使用结束日期</th>
                <th width="600">使用年限</th>
                <th width="600">规划用途</th>
                <th width="200">面积</th>
                <th width="800">规划总建筑面积</th>
                <th width="400">容积率</th>*@
                <th width="400">创建时间</th>
                <th width="800">操作</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model)
            {
                <tr>
                    <td><input type="checkbox" class="checkboxes" name='ids' value='@m.landid' /></td>
                    <td>@m.CompanyName</td>
                    <td>@m.CityName</td>
                    <td>@m.AreaName</td>
                    <td>@m.SubAreaName</td>
                   @* <td>@m.landno</td>
                    <td>@m.fieldno</td>
                    <td>@m.landname</td>
                    <td>@m.address</td>
                    <td>@m.landtypecode</td>
                    <td>@m.usetypecode</td>
                    <td>@m.startdate</td>
                    <td>@m.enddate</td>
                    <td>@m.useyear</td>
                    <td>@m.planpurpose</td>
                    <td>@m.factpurpose</td>
                    <td>@m.landarea</td>
                    <td>@m.buildingarea</td>*@
                    <td>@(m.createdate==null?"":m.createdate.ToString("yyyy-MM-dd"))</td>
                    <td>
                        <a class="btn mini purple thickbox" title='编辑角色资料' href="@Url.Action("Edity", new { id = m.landid })?TB_iframe=true&height=600&width=800">
                            <i class="icon-edit"></i>编辑及权限 </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
 @*   </div>*@
}
<div class="dataTables_paginate paging_bootstrap pagination">
    @Html.Pager(Model, new PagerOptions() { AutoHide = false, ShowTotalItemCount = true })
</div>

