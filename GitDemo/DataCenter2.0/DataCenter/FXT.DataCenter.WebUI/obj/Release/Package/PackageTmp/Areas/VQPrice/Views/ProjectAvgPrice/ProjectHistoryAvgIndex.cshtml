@{
    ViewBag.Title = "住宅案例历史均价";
}
@using Webdiyer.WebControls.Mvc
@using FXT.DataCenter.Domain.Models
@model PagedList<Dat_ProjectAvg>
@section StyleSheet{

}
@section  Javascript{
    <script type="text/javascript">
        $(document).ready(function () {
            $(".page-sidebar > ul > li > a[href='/VQPrice/ProjectAvgPrice/']").append("<span class='selected'></span>").parent().addClass("active");
            $("#btnExport").bind("click", function () {
                window.location.href = '@Url.Action("ExportProjectHistoryAvgPrice")' + "?projectid=" + "@ViewBag.ProjectId" + "&useMonthStr=" + $("#UseMonthStr").val();
            });

            //日期控件渲染
            $("#UseMonthStr").datepicker({
                format: "yyyy-mm-01",
                startView: 1,
                maxViewMode: 1,
                minViewMode: 1,
            });
        });
    </script>
    @{Html.RegisterMvcPagerScriptResource();}
}

<div class="row-fluid">
    <div class="span4" style="width: 35%;">
        <a class="btn thickbox" title='新增' href="@Url.Action("Edit", new { @ViewBag.ProjectId, temp = 0 })?TB_iframe=true&height=500&width=860">
            <i class="icon-upload-alt"></i>新增</a>
        <a class="btn" id="btnExport" title='导出'>导出</a>
    </div>
    <div class="span8" style="width: 60%;">
        @using (Html.BeginForm(null, null, null, FormMethod.Get, new { id = "search" }))
        { 
            <div class="dataTables_filter">
                <label>
                    <button type="submit" class="btn">
                        搜索 <i class="icon-search"></i>
                    </button>
                </label>
                <label>
                    <span>案例月份：</span>
                    @Html.TextBox("UseMonthStr", null, new { @class = "m-wrap small" })
                    <input type="hidden" name ="projectId" value="@ViewBag.ProjectId" />
                    <input type="hidden" name ="projectname" value="@ViewBag.ProjectName" />
                </label>
            </div>
        }
    </div>
</div>
<div>
    <label>楼盘名称：@ViewBag.ProjectName</label>
</div>

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>案例月份
            </th>
            <th>楼盘均价(元/㎡)
            </th>
            <th>涨跌幅(%)
            </th>
            <th>案例均价值参考
            </th>
            <th>是否确认价格
            </th>
            <th>操作
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var m in Model)
            {              
            <tr>
                <td>
                    @(m.UseMonth == DateTime.MinValue ? "----" : m.UseMonth.ToString("yyyy-MM-dd"))
                </td>
                <td>
                    @(m.ProjectAvgPrice == null ? "-" : m.ProjectAvgPrice.ToString())
                </td>
                <td>
                    @(m.ProjectGained == null ? "-" : (Math.Round(((decimal)m.ProjectGained * 100), 2)).ToString())
                </td>
                <td>
                    @(m.ProjectAvgPrice == null && m.projectavgid <= 0 ? "-" : m.casecount.ToString() + (m.casecount < 5 ? "(" + m.caseminprice.ToString() + ")" : ""))
                </td>
                <td>
                    @m.IsEValueName
                </td>
                <td>
                    <a class="btn mini purple thickbox" title='编辑' href="@Url.Action("Edit", new { m.ProjectId, UseMonthStr = (m.UseMonth).ToString("yyyy-MM-dd"), temp = 0 })?TB_iframe=true&height=450&width=860">
                        <i class="icon-edit"></i>编辑 </a>
                </td>
            </tr>
            }
        }

    </tbody>
</table>

<div class="pager">
    @{
        var totalPageCount = Model == null ? 0 : Model.TotalPageCount;
        var totalItemCount = Model == null ? 0 : Model.TotalItemCount;
        var currentPageIndex = Model == null ? 0 : Model.CurrentPageIndex;
    }
    <div>共 @totalPageCount 页 @totalItemCount 条记录,当前为第 @currentPageIndex 页</div>
    @if (Model != null && Model.Any())
    {
        @Html.Pager(Model, new PagerOptions { AutoHide = false, ShowPageIndexBox = true, PageIndexBoxType = PageIndexBoxType.TextBox })
    }

</div>



