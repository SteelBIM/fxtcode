@using Webdiyer.WebControls.Mvc
@model PagedList<FXT.DataCenter.Domain.Models.DTO.MisMatchProjectDTO>
@section StyleSheet{
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/Scripts/autocomplete/jquery.autocomplete.css")" />
}
@section Javascript{
    <script type="text/javascript">
        $(function () {
            var locationHref = window.location.href;
            if (locationHref.indexOf("House/ProjectCase/MisMatchProject")) {
                $("#navigation .breadcrumb li:eq(1)").remove();
                $("#navigation .breadcrumb li:eq(2)").remove();
                var html = " <li><span><a href=\"/House/ProjectCase/Index\">楼盘案例数据</a></span> <i class=\"icon-angle-right\"></i></li>";
                html += "<li><span><a href=\"/House/ProjectCase/UploadFile\">导入</a></span><i class=\"icon-angle-right\"></i></li>";
                html += "<li><span>楼盘名称不匹配列表</span></li>";
                $("ul.breadcrumb").append(html);
            }
        });
    </script>
    <script type="text/javascript">
        var UrlDelete = '@Url.Action("DeleteMisMatchProjectCase")';
        var UrlDeleteAll = '@Url.Action("DeleteAllMisMatchProjectCase")';
        var taskid = "@ViewBag.taskId";
        $(document).ready(function () {
            //导出
            $("#btnExport").bind("click", function () {
                window.location.href = '@Url.Action("MisMatchProjectCaseExport")' + "?taskid=" + taskid;
            });

            //删除
            $("#delete").unbind();
            $("#delete").click(function () {
                var ids = [];
                var checks = $("input[name='ids']:checked");
                if (checks.length == 0) {
                    alert("请选择要删除的数据");
                    return;
                }
                if (confirm("是否确定删除？")) {
                    checks.each(function () {
                        ids.push($(this).val());
                    });
                    $.ajax({
                        type: "POST",
                        url: UrlDelete,
                        data: { taskid: taskid, ids: ids },
                        traditional: true,
                        success: function (data) {
                            if (data.result) {
                                if (data.msg != "") {
                                    alert(data.msg);
                                }
                                location.reload();
                            } else {
                                alert(data.msg);
                            }
                        }
                    });
                }
            });

            //一键删除
            $("#deleteAll").unbind();
            $("#deleteAll").click(function () {
                if (confirm("是否确定删除所有不匹配楼盘？")) {
                    $.ajax({
                        type: "POST",
                        url: UrlDeleteAll,
                        data: { taskid: taskid },
                        traditional: true,
                        success: function (data) {
                            if (data.result) {
                                if (data.msg != "") {
                                    alert(data.msg);
                                }
                                location.reload();
                            } else {
                                alert(data.msg);
                            }
                        }
                    });
                }
            });
        });
    </script>
    @{Html.RegisterMvcPagerScriptResource();}
}
<div class="row-fluid">
    <div class="span4">
        <a id="btnExport" class="btn">导出</a>
        <a class="btn red" id="delete" href="javascript:;"><i class="icon-trash icon-white"></i>删除</a>
        <a class="btn red" id="deleteAll" href="javascript:;"><i class="icon-trash icon-white"></i>删除所有</a>
    </div>
    <div class="span8">
        @using (Html.BeginForm(null, null, null, FormMethod.Get, new { id = "search" }))
        { 
            <div class="dataTables_filter">
                <label>
                    <button type="submit" class="btn">
                        搜索 <i class="icon-search"></i>
                    </button>
                </label>
                <label>
                    <span>楼盘名称：</span>
                    @Html.TextBox("key", Request["key"], new { @class = "m-wrap small" })
                    @Html.Hidden("taskid", (int)ViewBag.taskId)
                </label>
            </div>
        }
    </div>
</div>
<table class="table table-striped table-hover " style="margin-top: 20px;">
    <thead>
        <tr>
            <th style="width: 8px;">
                <input type="checkbox" id="checkall" class="group-checkable" />
            </th>
            <th>行政区
            </th>
            <th>楼盘名称
            </th>
            <th>数量
            </th>
            <th>操作
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var chValue = item.AreaName + "#" + item.ProjectName;
            <tr>
                <td>
                    <input type="checkbox" class="checkboxes" name='ids' value='@chValue' />
                </td>
                <td>
                    @item.AreaName
                </td>
                <td>
                    @item.ProjectName
                    @if (item.IsWaitProject)
                    {
                        <span style="color: red;">(待建楼盘)</span> 
                    }
                </td>
                <td>
                    @item.Num
                </td>
                <td>
                    <a class="btn mini purple thickbox" title='编辑楼盘名称' href="@Url.Action("EditMisMatchProject", new { taskId = (int)ViewBag.taskId, projectname = item.ProjectName, areaname = item.AreaName })?TB_iframe=true&height=400&width=460">
                        <i class="icon-edit"></i>编辑 </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="pager">
    <div>共 @Model.TotalPageCount 页 @Model.TotalItemCount 条记录,当前为第 @Model.CurrentPageIndex 页</div>
    @if (Model != null && Model.Any())
    {
        @Html.Pager(Model, new PagerOptions { AutoHide = false, ShowPageIndexBox = true, PageIndexBoxType = PageIndexBoxType.TextBox })
    }

</div>
