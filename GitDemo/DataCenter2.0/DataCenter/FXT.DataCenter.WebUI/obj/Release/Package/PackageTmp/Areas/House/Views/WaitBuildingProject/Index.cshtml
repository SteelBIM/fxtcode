@using Webdiyer.WebControls.Mvc
@using FXT.DataCenter.Domain.Models
@model PagedList<Dat_WaitProject>
@section StyleSheet{

}
@section  Javascript{
    <script type="text/javascript">
        var UrlExport = '@Url.Action("Export")';
        $(document).ready(function() {

            $(".page-sidebar > ul > li > a[href='/House/WaitBuildingProject/']").append("<span class='selected'></span>").parent().addClass("active");

            //删除
            $("#delete").unbind();
            $("#delete").click(function () {
                var ids = [];
                var checks = $("input[name='ids']:checked");
                if (checks.length == 0) {
                    alert("请选择要删除的数据");
                    return;
                }
                if (confirm("是否确定删除？")) {
                    checks.each(function () {
                        ids.push($(this).val());
                    });
                    $.ajax({
                        type: "POST",
                        url: '@Url.Action("Delete")',
                        data: { ids: ids },
                        traditional: true,
                        success: function (data) {
                            if (data.result) {
                                if (data.msg != "") {
                                    alert(data.msg);
                                }
                                location.reload();
                            } else {
                                alert(data.msg);
                            }
                        }
                    });
                }

            });

            //导出
            $("#btnExport").click(function() {
                window.location.href = UrlExport + "?name=" + $.trim($("#Name").val());
            });
            //转正式楼盘
            @*  $("#btnChange").click(function () {
                var checks = $("input[name='ids']:checked");
                if (checks.length == 0) {
                    alert("请选择要转正的楼盘");
                    return;
                }
                if (checks.length > 1) {
                    alert("一次只能选择一条楼盘");
                    return;
                }
                var id = checks.val();
                location.href = '@Url.Action("Index", "Project")' + "?id=" + id;
            });*@
        });
    </script>
    @{Html.RegisterMvcPagerScriptResource();}

}
