        <a class="btn blue thickbox" title='添加待建楼盘' href="@Url.Action("Create")?TB_iframe=true&height=250&width=450">
            <i class="icon-plus icon-white"></i>新增</a> <a class="btn red" id="delete" href="javascript:;">
                <i class="icon-trash icon-white"></i>删除</a> <a class="btn thickbox" title="Excel导入" id="btnImport" href="@Url.Action("UploadFile")?TB_iframe=true&height=280&width=480">导 入</a> <a class="btn" id="btnExport" href="javascript:;">导 出</a>  
    </div>
