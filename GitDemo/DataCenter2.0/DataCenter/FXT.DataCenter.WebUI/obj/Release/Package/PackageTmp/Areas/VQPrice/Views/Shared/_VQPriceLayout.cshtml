@using FXT.DataCenter.Infrastructure.Common.Dictionary
@using FXT.DataCenter.Infrastructure.Data.ServicesImpl
@using FXT.DataCenter.WebUI.Infrastructure.WebSecurity

@helper DisplayUrl(int code)
{
    var firstOrDefault = new Menu().GetMenuByTypeCode(code).FirstOrDefault();
    if (firstOrDefault == null)
    {
        return;
    }
    var url = firstOrDefault.URL;
    @url
}

@{
    Layout = "~/Views/Shared/_Layout.cshtml";   
}
@section PageSpecificStyleSheetIncludes{
    @RenderSection("StyleSheet", false)
}
@section PageSpecificJavascriptIncludes{
    @RenderSection("Javascript", false)
}
@section _LeftMenu{
    <div class="page-container row-fluid">
        <div class="page-sidebar nav-collapse collapse">
            <ul>
                <li>
                    <div class="sidebar-toggler hidden-phone">
                    </div>
                </li>
                <li></li>

                @{
                    
                    var productModuleCodes = Passport.Current.AccessedModules.Where(m => m.cityid == Passport.Current.CityId);
                    var secondMenus = productModuleCodes.Where(m => m.parentmodulecode == SYS_Code_Dict.数据大类.VQ模块).OrderBy(m => m.createdate);
                    
                }
                @foreach (var item in secondMenus)
                {
                    <li><a href="@DisplayUrl(item.modulecode)"><i class="icon-bar-chart"></i><span class="title">@item.CodeName</span> </a></li>
                }
            </ul>
        </div>
        <div class="page-content">
            <div id="portlet-config" class="modal hide">
                <div class="modal-header">
                    <button data-dismiss="modal" class="close" type="button">
                    </button>
                    <h3>portlet Settings</h3>
                </div>
                <div class="modal-body">
                    <p>
                        Here will be a configuration form
                    </p>
                </div>
            </div>
            <div class="container-fluid">
                <div class="row-fluid">
                    <div class="span12" id="navigation">
                        <ul class="breadcrumb" style="margin-top: 20px;">
                            <li><i class="icon-home"></i><span>VQ</span> <i class="icon-angle-right"></i></li>
                            <li><span>住宅基准房价</span></li>
                            <li><span></span></li>
                        </ul>
                    </div>
                </div>
                @RenderBody()
            </div>
        </div>
    </div>
}
