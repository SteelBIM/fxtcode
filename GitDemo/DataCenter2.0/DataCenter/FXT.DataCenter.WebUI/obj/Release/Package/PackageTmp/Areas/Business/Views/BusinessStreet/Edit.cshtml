@model FXT.DataCenter.Domain.Models.Dat_Project_Biz
@{
    ViewBag.Title = "商业街";
}
@section StyleSheet{

    <style type="text/css">
        #tbInputCon
        {
            margin-top: 10px;
            margin-left: 30px;
            width: 95%;
            font-size: 14px;
            font-weight: normal;
            line-height: 20px;
            font-family: "Microsoft Yahei", "微软雅黑", "宋体", "Simsun", "Open Sans";
        }

        .required
        {
            color: red;
        }

        .xubox_layer
        {
            top: 50px !important;
        }

        .btn
        {
            margin-bottom: 10px;
        }
    </style>
